{
  "scripts": {
    "build:css": "postcss assets/css/main.css -o assets/css/main.compiled.css",
    "build:js": "esbuild assets/js/main.js --bundle --minify --target=es2015 --outfile=assets/js/bundle.js",
    "build": "npm run build:css && npm run build:js && hugo --minify"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "postcss": "^8.4.21",
    "autoprefixer": "^10.4.14",
    "esbuild": "^0.17.0",
    "hugo-extended": "^0.120.0"
  }
}
