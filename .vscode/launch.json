{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Astro Dev",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal",
      "serverReadyAction": {
        "pattern": "http://localhost:4321",
        "action": "openExternally"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run Diagnostics",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "diagnostics"],
      "console": "integratedTerminal"
    }
  ]
}
