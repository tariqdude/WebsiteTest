---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/ui/Section.astro';
import Typography from '../components/ui/Typography.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import FloatingActionButton from '../components/ui/FloatingActionButton.astro';
---

<Layout 
  title="Our Services - ProBuild Construction"
  description="Professional construction services including residential building, commercial construction, HVAC systems, renovations, and general contracting."
>
  <Header />
  
  <!-- Hero Section -->
  <Section 
    background="pattern" 
    padding="2xl" 
    containerSize="large"
    animated={true}
    className="min-h-[50vh] flex items-center"
  >
    <div class="text-center">
      <Typography variant="h1" className="mb-6 animate-fade-in-up text-brand-dark">
        Our Services
      </Typography>
      <Typography variant="lead" className="mb-8 max-w-3xl mx-auto animate-fade-in-up animation-delay-200 text-gray-600">
        From concept to completion, we offer comprehensive construction services 
        tailored to meet your specific needs and exceed your expectations.
      </Typography>
      <div class="animate-fade-in-up animation-delay-400">
        <Button href="#services" variant="primary" size="large">
          Explore Services
        </Button>
      </div>
    </div>
  </Section>

  <!-- Main Services Grid -->
  <Section 
    id="services"
    background="brand-light" 
    padding="2xl" 
    containerSize="large"
    animated={true}
  >
    <div class="grid lg:grid-cols-2 gap-8">
      <!-- Residential Construction -->
      <Card variant="elevated" className="animate-fade-in-left">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-brand-primary rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
            </div>
            <Typography variant="h3" className="text-brand-dark">
              Residential Construction
            </Typography>
          </div>
          <Typography variant="body" className="mb-6 text-gray-600 leading-relaxed">
            Custom homes, additions, renovations, and remodeling projects. We work closely with 
            homeowners to create spaces that reflect their lifestyle and vision.
          </Typography>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Custom Home Construction
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Kitchen & Bathroom Remodeling
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Home Additions & Extensions
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Basement Finishing
            </li>
          </ul>
          <Button href="/contact" variant="primary" size="medium">
            Get Estimate
          </Button>
        </div>
      </Card>

      <!-- Commercial Construction -->
      <Card variant="elevated" className="animate-fade-in-right">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-brand-accent rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <Typography variant="h3" className="text-brand-dark">
              Commercial Construction
            </Typography>
          </div>
          <Typography variant="body" className="mb-6 text-gray-600 leading-relaxed">
            Office buildings, retail spaces, warehouses, and industrial facilities. Professional 
            construction services for businesses of all sizes.
          </Typography>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Office Building Construction
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Retail & Restaurant Buildouts
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Warehouse & Industrial
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Tenant Improvements
            </li>
          </ul>
          <Button href="/contact" variant="accent" size="medium">
            Discuss Project
          </Button>
        </div>
      </Card>

      <!-- HVAC Services -->
      <Card variant="elevated" className="animate-fade-in-left animation-delay-200">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-blue-600 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <Typography variant="h3" className="text-brand-dark">
              HVAC Systems
            </Typography>
          </div>
          <Typography variant="body" className="mb-6 text-gray-600 leading-relaxed">
            Complete heating, ventilation, and air conditioning services. Energy-efficient 
            solutions for optimal comfort and cost savings.
          </Typography>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              System Installation
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Maintenance & Repairs
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Energy Efficiency Upgrades
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Emergency Services
            </li>
          </ul>
          <Button href="/contact" variant="primary" size="medium">
            Schedule Service
          </Button>
        </div>
      </Card>

      <!-- General Contracting -->
      <Card variant="elevated" className="animate-fade-in-right animation-delay-200">
        <div class="p-8">
          <div class="flex items-center mb-6">
            <div class="w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mr-4">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
            </div>
            <Typography variant="h3" className="text-brand-dark">
              General Contracting
            </Typography>
          </div>
          <Typography variant="body" className="mb-6 text-gray-600 leading-relaxed">
            Comprehensive project management from permits to final inspection. We handle all 
            aspects of construction so you don't have to.
          </Typography>
          <ul class="space-y-3 mb-6">
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Project Management
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Permits & Inspections
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Subcontractor Coordination
            </li>
            <li class="flex items-center text-gray-600">
              <svg class="w-5 h-5 text-brand-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Quality Control
            </li>
          </ul>
          <Button href="/contact" variant="primary" size="medium">
            Start Planning
          </Button>
        </div>
      </Card>
    </div>
  </Section>

  <!-- Process Section -->
  <Section 
    background="white" 
    padding="2xl" 
    containerSize="large"
    animated={true}
  >
    <div class="text-center mb-16">
      <Typography variant="h2" className="mb-4 text-brand-dark">
        Our Process
      </Typography>
      <Typography variant="lead" className="text-gray-600 max-w-2xl mx-auto">
        A proven methodology that ensures quality results and keeps your project on track.
      </Typography>
    </div>
    
    <div class="grid md:grid-cols-4 gap-8">
      <div class="text-center animate-fade-in-up">
        <div class="w-16 h-16 bg-brand-primary rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">
          1
        </div>
        <Typography variant="h4" className="mb-3 text-brand-dark">
          Consultation
        </Typography>
        <Typography variant="body" className="text-gray-600 text-sm">
          We listen to your vision, assess your needs, and provide expert recommendations.
        </Typography>
      </div>
      
      <div class="text-center animate-fade-in-up animation-delay-200">
        <div class="w-16 h-16 bg-brand-primary rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">
          2
        </div>
        <Typography variant="h4" className="mb-3 text-brand-dark">
          Planning
        </Typography>
        <Typography variant="body" className="text-gray-600 text-sm">
          Detailed project planning, permits, materials sourcing, and timeline development.
        </Typography>
      </div>
      
      <div class="text-center animate-fade-in-up animation-delay-400">
        <div class="w-16 h-16 bg-brand-primary rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">
          3
        </div>
        <Typography variant="h4" className="mb-3 text-brand-dark">
          Construction
        </Typography>
        <Typography variant="body" className="text-gray-600 text-sm">
          Expert craftsmanship with regular updates and quality control at every stage.
        </Typography>
      </div>
      
      <div class="text-center animate-fade-in-up animation-delay-600">
        <div class="w-16 h-16 bg-brand-primary rounded-full flex items-center justify-center mx-auto mb-4 text-white font-bold text-xl">
          4
        </div>
        <Typography variant="h4" className="mb-3 text-brand-dark">
          Completion
        </Typography>
        <Typography variant="body" className="text-gray-600 text-sm">
          Final walkthrough, project handover, and ongoing support for your satisfaction.
        </Typography>
      </div>
    </div>
  </Section>

  <!-- CTA Section -->
  <Section 
    background="gradient-accent" 
    padding="2xl" 
    containerSize="large"
    animated={true}
  >
    <div class="text-center text-white">
      <Typography variant="h2" className="mb-6 animate-fade-in-up">
        Ready to Start Your Project?
      </Typography>
      <Typography variant="lead" className="mb-8 max-w-2xl mx-auto animate-fade-in-up animation-delay-200">
        Get a detailed quote and timeline for your construction project. Free consultations available.
      </Typography>
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in-up animation-delay-400">
        <Button href="/contact" variant="white" size="large">
          Get Free Quote
        </Button>
        <Button href="/about" variant="secondary" size="large">
          Learn More About Us
        </Button>
      </div>
    </div>
  </Section>

  <!-- Floating Action Button -->
  <FloatingActionButton 
    href="/contact"
    icon="phone"
    position="bottom-left"
    color="accent"
    size="medium"
    className="animate-pulse-subtle"
  />
</Layout>
