---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
---

<BaseLayout title="Page Not Found" description="The page you are looking for does not exist.">
  <Header />
  <main class="container mx-auto px-4 py-16 text-center">
    <h1 class="text-6xl font-bold text-headings mb-4">404</h1>
    <p class="text-xl text-text mb-8">Oops! The page you're looking for doesn't exist.</p>
    <a href="/" class="text-primary hover:underline text-lg">Go back to the homepage</a>
  </main>
  <Footer />
</BaseLayout>
