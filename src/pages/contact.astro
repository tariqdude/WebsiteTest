---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Section from '../components/ui/Section.astro';
import Typography from '../components/ui/Typography.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import EnhancedContactForm from '../components/ui/EnhancedContactForm.astro';
import FloatingActionButton from '../components/ui/FloatingActionButton.astro';
---

<Layout 
  title="Contact Us - ProBuild Construction"
  description="Get in touch with ProBuild Construction for your next construction project. Free estimates, expert consultation, and professional service."
>
  <Header />
  
  <!-- Hero Section -->
  <Section 
    background="brand-primary" 
    padding="xl" 
    containerSize="large"
    animated={true}
    className="min-h-[40vh] flex items-center"
  >
    <div class="text-center text-white">
      <Typography variant="h1" className="mb-6 animate-fade-in-up">
        Contact Us
      </Typography>
      <Typography variant="lead" className="mb-8 max-w-2xl mx-auto animate-fade-in-up animation-delay-200">
        Ready to start your construction project? Get a free consultation and detailed quote from our expert team.
      </Typography>
    </div>
  </Section>

  <!-- Contact Options & Form -->
  <Section 
    background="white" 
    padding="2xl" 
    containerSize="large"
    animated={true}
  >
    <div class="grid lg:grid-cols-3 gap-12">
      <!-- Contact Information -->
      <div class="lg:col-span-1 space-y-8">
        <div class="animate-fade-in-left">
          <Typography variant="h3" className="mb-6 text-brand-dark">
            Get In Touch
          </Typography>
          <Typography variant="body" className="mb-8 text-gray-600 leading-relaxed">
            We're here to help with all your construction needs. Reach out through any of these channels 
            and we'll respond within 24 hours.
          </Typography>
        </div>

        <!-- Contact Methods -->
        <div class="space-y-6 animate-fade-in-left animation-delay-200">
          <Card variant="outlined" className="p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <Typography variant="h5" className="text-brand-dark mb-1">
                  Phone
                </Typography>
                <a href="tel:+1-555-123-4567" class="text-brand-primary hover:text-brand-primary/80 font-medium transition-colors">
                  (555) 123-4567
                </a>
              </div>
            </div>
          </Card>

          <Card variant="outlined" className="p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-center">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <Typography variant="h5" className="text-brand-dark mb-1">
                  Email
                </Typography>
                <a href="mailto:info@probuildconstruction.com" class="text-brand-primary hover:text-brand-primary/80 font-medium transition-colors">
                  info@probuildconstruction.com
                </a>
              </div>
            </div>
          </Card>

          <Card variant="outlined" className="p-6 hover:shadow-lg transition-shadow duration-300">
            <div class="flex items-start">
              <div class="w-12 h-12 bg-brand-primary/10 rounded-lg flex items-center justify-center mr-4 mt-1">
                <svg class="w-6 h-6 text-brand-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <Typography variant="h5" className="text-brand-dark mb-1">
                  Address
                </Typography>
                <address class="text-gray-600 not-italic leading-relaxed">
                  123 Construction Ave<br>
                  Builder City, BC 12345
                </address>
              </div>
            </div>
          </Card>
        </div>

        <!-- Business Hours -->
        <div class="animate-fade-in-left animation-delay-400">
          <Typography variant="h4" className="mb-4 text-brand-dark">
            Business Hours
          </Typography>
          <div class="space-y-2 text-gray-600">
            <div class="flex justify-between">
              <span>Monday - Friday</span>
              <span class="font-medium">7:00 AM - 7:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Saturday</span>
              <span class="font-medium">8:00 AM - 5:00 PM</span>
            </div>
            <div class="flex justify-between">
              <span>Sunday</span>
              <span class="font-medium">Emergency Only</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form -->
      <div class="lg:col-span-2 animate-fade-in-right">
        <Card variant="elevated" className="p-8">
          <Typography variant="h3" className="mb-6 text-brand-dark">
            Request a Quote
          </Typography>
          <Typography variant="body" className="mb-8 text-gray-600">
            Tell us about your project and we'll provide a detailed estimate within 24 hours.
          </Typography>
                    <EnhancedContactForm 
            showDebugInfo={import.meta.env.DEV}
            class="enhanced-contact-page"
          />
        </Card>
      </div>
    </div>
  </Section>

  <!-- Service Areas -->
  <Section 
    background="brand-light" 
    padding="2xl" 
    containerSize="large"
    animated={true}
  >
    <div class="text-center mb-12">
      <Typography variant="h2" className="mb-4 text-brand-dark">
        Service Areas
      </Typography>
      <Typography variant="lead" className="text-gray-600 max-w-2xl mx-auto">
        We proudly serve communities throughout the region with professional construction services.
      </Typography>
    </div>
    
    <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Builder City
        </Typography>
        <Typography variant="small" className="text-gray-600">
          Primary Service Area
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-100 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Constructionville
        </Typography>
        <Typography variant="small" className="text-gray-600">
          30 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-200 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Renovation Heights
        </Typography>
        <Typography variant="small" className="text-gray-600">
          25 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-300 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Craft Valley
        </Typography>
        <Typography variant="small" className="text-gray-600">
          45 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-400 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Tool Township
        </Typography>
        <Typography variant="small" className="text-gray-600">
          35 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-500 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Hammer Hills
        </Typography>
        <Typography variant="small" className="text-gray-600">
          40 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-600 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Blueprint Bay
        </Typography>
        <Typography variant="small" className="text-gray-600">
          50 min radius
        </Typography>
      </Card>
      
      <Card variant="outlined" className="text-center p-6 animate-fade-in-up animation-delay-700 hover:shadow-lg transition-shadow duration-300">
        <Typography variant="h5" className="text-brand-dark mb-2">
          Foundation Falls
        </Typography>
        <Typography variant="small" className="text-gray-600">
          60 min radius
        </Typography>
      </Card>
    </div>
    
    <div class="text-center mt-12 animate-fade-in-up animation-delay-800">
      <Typography variant="body" className="text-gray-600 mb-6">
        Don't see your area listed? We may still be able to help with larger projects.
      </Typography>
      <Button href="tel:+1-555-123-4567" variant="primary" size="medium">
        Call to Inquire
      </Button>
    </div>
  </Section>

  <!-- Emergency Services -->
  <Section 
    background="red-600" 
    padding="xl" 
    containerSize="large"
    animated={true}
  >
    <div class="text-center text-white">
      <div class="flex justify-center mb-6 animate-fade-in-up">
        <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        </div>
      </div>
      <Typography variant="h2" className="mb-4 animate-fade-in-up animation-delay-200">
        Emergency Services Available
      </Typography>
      <Typography variant="lead" className="mb-8 max-w-2xl mx-auto animate-fade-in-up animation-delay-400">
        Construction emergencies don't wait for business hours. Call us 24/7 for urgent repairs and emergency services.
      </Typography>
      <div class="animate-fade-in-up animation-delay-600">
        <Button href="tel:+1-555-123-4567" variant="white" size="large" className="animate-pulse-subtle">
          Emergency Hotline: (555) 123-4567
        </Button>
      </div>
    </div>
  </Section>

  <!-- Floating Action Buttons -->
  <FloatingActionButton 
    href="tel:+1-555-123-4567"
    icon="phone"
    position="bottom-right"
    color="primary"
    size="large"
    className="animate-bounce-subtle"
  />
  
  <FloatingActionButton 
    href="mailto:info@probuildconstruction.com"
    icon="mail"
    position="bottom-left"
    color="accent"
    size="medium"
    className="animate-pulse-subtle"
  />
</Layout>
