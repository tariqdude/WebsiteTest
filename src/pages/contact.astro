---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us">
  <section class="py-20 text-center">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl font-heading text-accent mb-8">Get in Touch</h1>
      <p class="text-xl text-secondary mb-6">
        Ready to schedule your dyno session or have questions about our services? Contact us today!
      </p>
      <div class="max-w-lg mx-auto bg-gray-800 p-8 rounded-lg shadow-lg border border-gray-700">
        <form class="space-y-6">
          <div>
            <label for="name" class="block text-lg font-heading text-secondary text-left mb-2">Name</label>
            <input type="text" id="name" name="name" class="w-full p-3 rounded bg-gray-700 border border-gray-600 text-secondary focus:outline-none focus:border-accent" placeholder="Your Name" required>
          </div>
          <div>
            <label for="email" class="block text-lg font-heading text-secondary text-left mb-2">Email</label>
            <input type="email" id="email" name="email" class="w-full p-3 rounded bg-gray-700 border border-gray-600 text-secondary focus:outline-none focus:border-accent" placeholder="your.email@example.com" required>
          </div>
          <div>
            <label for="message" class="block text-lg font-heading text-secondary text-left mb-2">Message</label>
            <textarea id="message" name="message" rows="5" class="w-full p-3 rounded bg-gray-700 border border-gray-600 text-secondary focus:outline-none focus:border-accent" placeholder="Your message..." required></textarea>
          </div>
          <button type="submit" class="w-full bg-accent text-primary font-bold py-3 rounded-full text-xl hover:bg-blue-600 transition-colors duration-300 shadow-lg">
            Send Message
          </button>
        </form>
      </div>
      <div class="mt-10 text-lg text-gray-400">
        <p>Email: <a href="mailto:info@precisiondyno.com" class="text-accent hover:underline">info@precisiondyno.com</a></p>
        <p>Phone: <a href="tel:+1234567890" class="text-accent hover:underline">+1 (234) 567-890</a></p>
        <p>Address: 123 Performance Way, Race City, RC 12345</p>
      </div>
    </div>
  </section>
</BaseLayout>
