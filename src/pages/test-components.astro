---
// Test page to validate our comprehensive component fixes
import Layout from '../layouts/Layout.astro';

// Test React components
import { InteractiveCounter } from '../components/frameworks/react';

// Test Vue components  
import { ColorPalette } from '../components/frameworks/vue';

// Test UI components
import { ComponentLoader } from '../components/ui';
---

<Layout title="Component Test Page">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Component Test Page</h1>
    
    <div class="space-y-12">
      <!-- Test React Component -->
      <section class="framework-demo" data-framework="react">
        <h2 class="text-2xl font-semibold mb-4">React Component Test</h2>
        <div class="card-enhanced">
          <InteractiveCounter client:load />
        </div>
      </section>

      <!-- Test Vue Component -->
      <section class="framework-demo" data-framework="vue">
        <h2 class="text-2xl font-semibold mb-4">Vue Component Test</h2>
        <div class="card-enhanced">
          <ColorPalette client:load />
        </div>
      </section>

      <!-- Test Component Loader -->
      <section class="framework-demo">
        <h2 class="text-2xl font-semibold mb-4">Component Loader Test</h2>
        <div class="card-enhanced">
          <ComponentLoader 
            component="InteractiveCounter"
            framework="react"
            client:visible 
          />
        </div>
      </section>
    </div>
  </main>
</Layout>

<style>
  .framework-demo {
    @apply border rounded-lg p-6 bg-white dark:bg-gray-900;
  }
  
  .card-enhanced {
    @apply p-4 border border-gray-200 dark:border-gray-700 rounded-lg;
  }
</style>
