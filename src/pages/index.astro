---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../lib/utils';

// React Components - Critical Features
import InteractiveCounter from '../components/frameworks/react/InteractiveCounter.jsx';
import DataVisualizationDashboard from '../components/frameworks/react/DataVisualizationDashboard.jsx';
import AdvancedForm from '../components/frameworks/react/AdvancedForm.tsx';

// Vue Components
import ColorPalette from '../components/frameworks/vue/ColorPalette.vue';

// Other Framework Components
import SvelteSkillsDashboard from '../components/frameworks/svelte/SvelteSkillsDashboard.svelte';
import SolidStateDemo from '../components/frameworks/solid/SolidStateDemo.jsx';
import PreactMiniDashboard from '../components/frameworks/preact/PreactMiniDashboard.jsx';

// UI Components
import AnimatedBackground from '../components/ui/AnimatedBackground.jsx';
import CodeBlock from '../components/ui/CodeBlock.jsx';
import SimpleDemo from '../components/ui/SimpleDemo.jsx';
import SimpleColorDemo from '../components/ui/SimpleColorDemo.jsx';

// Showcase Components - Advanced Features
import PerformanceMetrics from '../components/showcases/PerformanceMetrics.jsx';
import InteractiveTerminal from '../components/showcases/InteractiveTerminal.jsx';
import Advanced3DScene from '../components/showcases/Advanced3DScene.jsx';
import CodeEditorShowcase from '../components/showcases/CodeEditorShowcase.jsx';
import GSAPAnimationShowcase from '../components/showcases/GSAPAnimationShowcase.jsx';

// Icons and Data
import {
  ChevronRight,
  Rocket,
  Zap,
  Globe,
  Code,
  Layers,
  Sparkles,
} from 'lucide-react';
import { technologyStats } from '../data/stats.js';

// Fetch content collections
const allBlogPosts = await getCollection('blog');
const featuredPosts = allBlogPosts
  .filter((post) => post.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter((project) => project.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

// Hero features
const features = [
  {
    icon: Rocket,
    title: 'Lightning Fast',
    description: 'Zero JavaScript by default. Only ship what you need.',
    color: 'text-blue-600 dark:text-blue-400',
    bg: 'bg-blue-50 dark:bg-blue-900/20',
  },
  {
    icon: Layers,
    title: 'Islands Architecture',
    description: 'Interactive components load independently.',
    color: 'text-purple-600 dark:text-purple-400',
    bg: 'bg-purple-50 dark:bg-purple-900/20',
  },
  {
    icon: Globe,
    title: 'Framework Agnostic',
    description: 'Use React, Vue, Svelte, or any framework you love.',
    color: 'text-green-600 dark:text-green-400',
    bg: 'bg-green-50 dark:bg-green-900/20',
  },
  {
    icon: Code,
    title: 'Developer Experience',
    description: 'Built-in TypeScript, Tailwind CSS, and hot reloading.',
    color: 'text-orange-600 dark:text-orange-400',
    bg: 'bg-orange-50 dark:bg-orange-900/20',
  },
  {
    icon: Zap,
    title: 'Build Optimized',
    description: 'Automatic optimizations for images, CSS, and JavaScript.',
    color: 'text-yellow-600 dark:text-yellow-400',
    bg: 'bg-yellow-50 dark:bg-yellow-900/20',
  },
  {
    icon: Sparkles,
    title: 'Content Collections',
    description: 'Type-safe content management with full TypeScript support.',
    color: 'text-pink-600 dark:text-pink-400',
    bg: 'bg-pink-50 dark:bg-pink-900/20',
  },
];
---

<Layout
  title='Astro Showcase - Modern Web Development'
  description="Experience the power of Astro's islands architecture with this comprehensive showcase featuring React, Vue, TypeScript, and modern web development best practices."
>
  <!-- Hero Section -->
  <section
    class='relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-900 dark:to-purple-900/20'
  >
    <AnimatedBackground client:load />
    <div
      class='bg-grid-gray-100 dark:bg-grid-gray-800 absolute inset-0 opacity-20'
    >
    </div>
    <div class='container relative mx-auto px-4 py-20 sm:px-6 lg:px-8 lg:py-32'>
      <div class='text-center'>
        <!-- Main Heading -->
        <h1
          class='animate-fade-in-up mb-6 text-4xl font-bold text-gray-900 dark:text-white md:text-6xl lg:text-7xl'
        >
          <span class='block'>The Future of</span>
          <span
            class='gradient-text animate-gradient-x block bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600'
            >Web Development</span
          >
        </h1>

        <p
          class='animate-fade-in-up animation-delay-200 mx-auto mb-8 max-w-3xl text-xl text-gray-600 dark:text-gray-300 md:text-2xl'
        >
          Experience Astro's islands architecture with zero JavaScript by
          default, framework-agnostic components, and lightning-fast
          performance.
        </p>

        <!-- CTA Buttons -->
        <div
          class='animate-fade-in-up animation-delay-400 mb-12 flex flex-col justify-center gap-4 sm:flex-row'
        >
          <a
            href='/WebsiteTest/showcase'
            class='btn-primary group bg-gradient-to-r from-purple-600 to-blue-600 px-8 py-4 text-lg hover:from-purple-700 hover:to-blue-700'
          >
            🚀 View Full Showcase
            <ChevronRight
              className='ml-2 h-5 w-5 transition-transform group-hover:translate-x-1'
            />
          </a>
          <a
            href='/WebsiteTest/projects'
            class='btn-secondary px-8 py-4 text-lg'
          >
            Explore Projects
          </a>
        </div>

        <!-- Stats -->
        <div class='animate-fade-in-up animation-delay-600'>
          <PerformanceMetrics client:only='react' />
        </div>
      </div>
    </div>
  </section>

  <!-- Live Performance Monitoring -->
  <section class='bg-gray-50 py-20 dark:bg-gray-800/50'>
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          Real-Time Performance
        </h2>
        <p class='mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300'>
          Monitor your application's performance metrics in real-time. See how
          Astro's optimizations deliver exceptional user experiences.
        </p>
      </div>
      <div class='mx-auto max-w-6xl'>
        <PerformanceMetrics client:load />
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class='bg-white py-20 dark:bg-gray-900'>
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          Why Choose Astro?
        </h2>
        <p class='mx-auto max-w-2xl text-xl text-gray-600 dark:text-gray-300'>
          Astro delivers the best developer experience with industry-leading
          performance
        </p>
      </div>

      <div class='grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3'>
        {
          features.map(
            ({ icon: Icon, title, description, color, bg }, index) => (
              <div
                class={`animate-fade-in-up rounded-2xl border border-gray-200 p-6 transition-all duration-300 hover:border-primary-300 hover:shadow-lg dark:border-gray-700 dark:hover:border-primary-600`}
                style={`animation-delay: ${index * 100}ms`}
              >
                <div class={`inline-flex rounded-xl p-3 ${bg} mb-4`}>
                  <Icon className={`h-6 w-6 ${color}`} />
                </div>
                <h3 class='mb-2 text-xl font-semibold text-gray-900 dark:text-white'>
                  {title}
                </h3>
                <p class='text-gray-600 dark:text-gray-300'>{description}</p>
              </div>
            )
          )
        }
      </div>
    </div>
  </section>

  <!-- Interactive Islands Demo -->
  <section class='bg-gray-50 py-20 dark:bg-gray-800'>
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          Islands Architecture Demo
        </h2>
        <p class='mx-auto max-w-2xl text-xl text-gray-600 dark:text-gray-300'>
          Interactive components from different frameworks working together
          seamlessly
        </p>
      </div>

      <div class='mx-auto grid max-w-6xl grid-cols-1 gap-12 lg:grid-cols-2'>
        <!-- React Component -->
        <div class='space-y-4'>
          <div class='mb-4 flex items-center space-x-2'>
            <div class='h-4 w-4 rounded-full bg-blue-500'></div>
            <h3 class='text-lg font-semibold text-gray-900 dark:text-white'>
              React Island
            </h3>
            <span
              class='rounded bg-blue-100 px-2 py-1 text-sm text-gray-500 dark:bg-blue-900 dark:text-gray-400'
            >
              client:load
            </span>
          </div>

          <!-- Reliable demo first -->
          <SimpleDemo client:load title='React Counter' type='counter' />

          <!-- Advanced component below -->
          <div class='mt-4'>
            <InteractiveCounter client:load />
          </div>
        </div>

        <!-- Vue Component -->
        <div class='space-y-4'>
          <div class='mb-4 flex items-center space-x-2'>
            <div class='h-4 w-4 rounded-full bg-green-500'></div>
            <h3 class='text-lg font-semibold text-gray-900 dark:text-white'>
              Vue Island
            </h3>
            <span
              class='rounded bg-green-100 px-2 py-1 text-sm text-gray-500 dark:bg-green-900 dark:text-gray-400'
            >
              client:visible
            </span>
          </div>

          <!-- Reliable Vue demo first -->
          <SimpleColorDemo client:load title='Color Demo' />

          <!-- Advanced component below -->
          <div class='mt-4'>
            <ColorPalette client:visible />
          </div>
        </div>
      </div>

      <!-- Code Example -->
      <div class='mx-auto mt-16 max-w-4xl'>
        <CodeBlock
          client:visible
          code={`<!-- React component loads immediately -->
<InteractiveCounter client:load />

<!-- Vue component loads when visible -->
<ColorPalette client:visible />

<!-- Advanced components with conditional loading -->
<PerformanceMetrics client:load />
<AnimatedBackground client:visible />
<InteractiveTerminal client:visible />`}
          language='astro'
          title='index.astro'
        />
      </div>
    </div>
  </section>

  <!-- Advanced Showcase Components -->
  <section
    class='bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50 py-20 dark:from-gray-900 dark:via-blue-900/20 dark:to-purple-900/20'
  >
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          🚀 Advanced Framework Showcase
        </h2>
        <p class='mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300'>
          Explore cutting-edge web technologies with React, Vue, Svelte,
          Solid.js, Preact, and more - all working together in perfect harmony
        </p>
      </div>

      <!-- 3D WebGL Scene -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            🎮 3D WebGL with Three.js
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            Real-time 3D graphics, lighting, and interactive controls
          </p>
        </div>
        <Advanced3DScene client:visible />
      </div>

      <!-- Data Visualization Dashboard -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            📊 Data Visualization Hub
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            D3.js and Chart.js working together for stunning data stories
          </p>
        </div>
        <DataVisualizationDashboard client:visible />
      </div>

      <!-- Framework Comparison Grid -->
      <div class='mb-16 grid grid-cols-1 gap-8 lg:grid-cols-2'>
        <!-- Svelte Skills Dashboard -->
        <div class='space-y-4'>
          <div class='mb-6 text-center'>
            <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
              🟠 Svelte Animation Magic
            </h3>
            <p class='text-gray-600 dark:text-gray-300'>
              Smooth animations with Svelte's built-in motion library
            </p>
          </div>
          <SvelteSkillsDashboard client:visible />
        </div>

        <!-- Solid.js State Management -->
        <div class='space-y-4'>
          <div class='mb-6 text-center'>
            <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
              🔵 Solid.js Fine-Grained Reactivity
            </h3>
            <p class='text-gray-600 dark:text-gray-300'>
              Ultra-fast updates with surgical precision
            </p>
          </div>
          <SolidStateDemo client:visible />
        </div>
      </div>

      <!-- Advanced Form with React Hook Form -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            📝 Advanced Form Validation
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            React Hook Form + Zod validation + TypeScript for bulletproof forms
          </p>
        </div>
        <AdvancedForm client:visible />
      </div>

      <!-- Code Editor Showcase -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            💻 Monaco Code Editor
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            Full VS Code editor experience with syntax highlighting and
            IntelliSense
          </p>
        </div>
        <CodeEditorShowcase client:idle />
      </div>

      <!-- GSAP Animation Studio -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            🎬 GSAP Animation Studio
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            Professional animations with GreenSock's industry-standard library
          </p>
        </div>
        <GSAPAnimationShowcase client:visible />
      </div>

      <!-- Preact Lightweight Demo -->
      <div class='mb-16'>
        <div class='mb-8 text-center'>
          <h3 class='mb-2 text-2xl font-bold text-gray-900 dark:text-white'>
            ⚡ Preact Mini Dashboard
          </h3>
          <p class='text-gray-600 dark:text-gray-300'>
            Same React API but only 3KB - perfect for performance-critical apps
          </p>
        </div>
        <PreactMiniDashboard client:visible />
      </div>
    </div>
  </section>

  <!-- Framework Statistics -->
  <section class='bg-white py-20 dark:bg-gray-900'>
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          🏆 Multi-Framework Excellence
        </h2>
        <p class='mx-auto max-w-2xl text-xl text-gray-600 dark:text-gray-300'>
          All frameworks working together in a single application
        </p>
      </div>

      <div class='grid grid-cols-2 gap-8 md:grid-cols-4 lg:grid-cols-6'>
        {
          [
            {
              name: 'React',
              color: 'text-blue-500',
              bg: 'bg-blue-100 dark:bg-blue-900/20',
              icon: '⚛️',
              version: '18.3',
            },
            {
              name: 'Vue',
              color: 'text-green-500',
              bg: 'bg-green-100 dark:bg-green-900/20',
              icon: '🟢',
              version: '3.5',
            },
            {
              name: 'Svelte',
              color: 'text-orange-500',
              bg: 'bg-orange-100 dark:bg-orange-900/20',
              icon: '🟠',
              version: '5.0',
            },
            {
              name: 'Solid.js',
              color: 'text-blue-600',
              bg: 'bg-blue-100 dark:bg-blue-900/20',
              icon: '🔵',
              version: '1.8',
            },
            {
              name: 'Preact',
              color: 'text-purple-500',
              bg: 'bg-purple-100 dark:bg-purple-900/20',
              icon: '💜',
              version: '10.0',
            },
            {
              name: 'Three.js',
              color: 'text-gray-600',
              bg: 'bg-gray-100 dark:bg-gray-800',
              icon: '🎮',
              version: 'r160',
            },
          ].map((framework) => (
            <div
              class={`rounded-xl p-6 text-center ${framework.bg} transition-transform duration-300 hover:scale-105`}
            >
              <div class='mb-3 text-4xl'>{framework.icon}</div>
              <h3 class={`font-bold ${framework.color} mb-1 text-lg`}>
                {framework.name}
              </h3>
              <p class='text-sm text-gray-600 dark:text-gray-400'>
                v{framework.version}
              </p>
            </div>
          ))
        }
      </div>

      <!-- Technology Stats -->
      <div class='mt-16 grid grid-cols-2 gap-8 md:grid-cols-4'>
        {
          technologyStats.map((stat) => (
            <div class='text-center'>
              <div class='mb-2 text-3xl'>{stat.icon}</div>
              <div class='mb-1 text-3xl font-bold text-gray-900 dark:text-white'>
                {stat.value}
              </div>
              <div class='text-sm text-gray-600 dark:text-gray-400'>
                {stat.label}
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Interactive Terminal Demo -->
  <section class='bg-gray-50 py-20 dark:bg-gray-800/50'>
    <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
      <div class='mb-16 text-center'>
        <h2
          class='mb-6 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'
        >
          Interactive Developer Tools
        </h2>
        <p class='mx-auto max-w-3xl text-xl text-gray-600 dark:text-gray-300'>
          Experience advanced interactive components that showcase the power of
          islands architecture. Try the terminal below to explore project
          information and commands.
        </p>
      </div>
      <div class='mx-auto max-w-4xl'>
        <InteractiveTerminal client:visible />
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {
    featuredProjects.length > 0 && (
      <section class='bg-white py-20 dark:bg-gray-900'>
        <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
          <div class='mb-16 flex items-center justify-between'>
            <div>
              <h2 class='mb-4 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'>
                Featured Projects
              </h2>
              <p class='text-xl text-gray-600 dark:text-gray-300'>
                Showcasing real-world applications built with modern
                technologies
              </p>
            </div>
            <a
              href='/WebsiteTest/projects'
              class='group hidden items-center font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 md:flex'
            >
              View All Projects
              <ChevronRight className='ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform' />
            </a>
          </div>

          <div class='grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3'>
            {featuredProjects.map((project) => (
              <article class='card group transition-all duration-300 hover:shadow-xl'>
                <div class='mb-4 aspect-video overflow-hidden rounded-lg bg-gradient-to-br from-primary-100 to-purple-100 dark:from-primary-900 dark:to-purple-900'>
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class='h-full w-full object-cover transition-transform duration-300 group-hover:scale-105'
                  />
                </div>
                <h3 class='mb-2 text-xl font-semibold text-gray-900 transition-colors group-hover:text-primary-600 dark:text-white dark:group-hover:text-primary-400'>
                  {project.data.title}
                </h3>
                <p class='mb-4 text-gray-600 dark:text-gray-300'>
                  {project.data.description}
                </p>
                <div class='mb-4 flex flex-wrap gap-2'>
                  {project.data.tech.slice(0, 3).map((tech) => (
                    <span class='rounded bg-gray-100 px-2 py-1 text-xs text-gray-700 dark:bg-gray-700 dark:text-gray-300'>
                      {tech}
                    </span>
                  ))}
                  {project.data.tech.length > 3 && (
                    <span class='px-2 py-1 text-xs text-gray-500 dark:text-gray-400'>
                      +{project.data.tech.length - 3} more
                    </span>
                  )}
                </div>
                <div class='flex space-x-4'>
                  {project.data.demo && (
                    <a
                      href={project.data.demo}
                      class='text-sm font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300'
                      target='_blank'
                      rel='noopener noreferrer'
                    >
                      Live Demo →
                    </a>
                  )}
                  {project.data.github && (
                    <a
                      href={project.data.github}
                      class='text-sm font-medium text-gray-600 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300'
                      target='_blank'
                      rel='noopener noreferrer'
                    >
                      GitHub →
                    </a>
                  )}
                </div>
              </article>
            ))}
          </div>

          <div class='mt-12 text-center md:hidden'>
            <a href='/WebsiteTest/projects' class='btn-primary'>
              View All Projects
            </a>
          </div>
        </div>
      </section>
    )
  }

  <!-- Featured Blog Posts -->
  {
    featuredPosts.length > 0 && (
      <section class='bg-gray-50 py-20 dark:bg-gray-800'>
        <div class='container mx-auto px-4 sm:px-6 lg:px-8'>
          <div class='mb-16 flex items-center justify-between'>
            <div>
              <h2 class='mb-4 text-3xl font-bold text-gray-900 dark:text-white md:text-5xl'>
                Latest Insights
              </h2>
              <p class='text-xl text-gray-600 dark:text-gray-300'>
                Thoughts on modern web development and best practices
              </p>
            </div>
            <a
              href='/WebsiteTest/blog'
              class='group hidden items-center font-medium text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 md:flex'
            >
              View All Posts
              <ChevronRight className='ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform' />
            </a>
          </div>

          <div class='grid grid-cols-1 gap-8 lg:grid-cols-2'>
            {featuredPosts.map((post, index) => (
              <article
                class={`card group transition-all duration-300 hover:shadow-xl ${index === 0 ? 'lg:row-span-2' : ''}`}
              >
                <div class='mb-4 flex items-center space-x-3'>
                  <img
                    src={`/images/avatars/${post.data.author.toLowerCase().replace(' ', '-')}.jpg`}
                    alt={post.data.author}
                    class='h-10 w-10 rounded-full'
                    loading='lazy'
                  />
                  <div>
                    <p class='text-sm font-medium text-gray-900 dark:text-white'>
                      {post.data.author}
                    </p>
                    <p class='text-xs text-gray-500 dark:text-gray-400'>
                      {formatDate(post.data.pubDate)}
                    </p>
                  </div>
                </div>

                <h3 class='mb-3 text-2xl font-bold text-gray-900 transition-colors group-hover:text-primary-600 dark:text-white dark:group-hover:text-primary-400'>
                  <a href={`/blog/${post.slug}`}>{post.data.title}</a>
                </h3>

