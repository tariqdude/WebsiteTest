---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Midwest Climate Solutions - Commercial HVAC Experts">
  <header>
    <nav class="navbar">
      <div class="nav-container">
        <div class="logo">
          <i class="fas fa-fan"></i>
          <span>Midwest Climate Solutions</span>
        </div>
        <ul class="nav-menu">
          <li><a href="#home">Home</a></li>
          <li><a href="#services">Services</a></li>
          <li><a href="#projects">Projects</a></li>
          <li><a href="#about">About</a></li>
          <li><a href="#testimonials">Testimonials</a></li>
          <li><a href="#contact">Contact</a></li>
        </ul>
        <div class="hamburger">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    </nav>
  </header>

  <main>
    <!-- Hero Section -->
    <section id="home" class="hero">
      <div class="hero-content">
        <div class="hero-text">
          <h1>Leading Commercial HVAC Solutions</h1>
          <p>
            Optimizing indoor environments for businesses across the Great Lakes
            region with advanced HVAC systems and unparalleled service.
          </p>
          <div class="hero-buttons">
            <button class="btn btn-primary" onclick="showContent('text')">
              Our Story
            </button>
            <button class="btn btn-secondary" onclick="showContent('image')">
              View Projects
            </button>
            <button class="btn btn-accent" onclick="showContent('video')">
              Watch Video
            </button>
          </div>
        </div>
        <div class="hero-media">
          <div id="text-content" class="media-content active">
            <h3>Your Trusted HVAC Partner</h3>
            <p>
              Midwest Climate Solutions specializes in comprehensive commercial
              HVAC services. Our certified technicians utilize cutting-edge
              technology to ensure optimal climate control, energy efficiency,
              and superior indoor air quality for your facility.
            </p>
            <ul>
              <li><i class="fas fa-check"></i> Certified & Experienced Technicians</li>
              <li><i class="fas fa-check"></i> Energy-Efficient Solutions</li>
              <li><i class="fas fa-check"></i> 24/7 Emergency Service</li>
            </ul>
          </div>
          <div id="image-content" class="media-content">
            <img
              src="https://images.unsplash.com/photo-1600861194802-ba3b50936a23?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80"
              alt="Commercial HVAC System"
            />
          </div>
          <div id="video-content" class="media-content">
            <iframe
              width="100%"
              height="315"
              src="https://www.youtube.com/embed/your_hvac_video_id"
              frameborder="0"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="services">
      <div class="container">
        <h2>Our Comprehensive HVAC Services</h2>
        <div class="services-grid">
          <div class="service-card">
            <i class="fas fa-fan"></i>
            <h3>HVAC System Installation</h3>
            <p>
              Expert installation of new commercial HVAC systems, tailored to
              your facility's unique needs.
            </p>
          </div>
          <div class="service-card">
            <i class="fas fa-wrench"></i>
            <h3>Preventative Maintenance</h3>
            <p>
              Proactive maintenance programs to ensure peak performance,
              efficiency, and longevity of your systems.
            </p>
          </div>
          <div class="service-card">
            <i class="fas fa-fire-extinguisher"></i>
            <h3>Emergency Repairs</h3>
            <p>
              24/7 rapid response for critical HVAC system breakdowns,
              minimizing downtime and discomfort.
            </p>
          </div>
          <div class="service-card">
            <i class="fas fa-leaf"></i>
            <h3>Energy Management Solutions</h3>
            <p>
              Implementing smart controls and strategies to reduce energy
              consumption and operational costs.
            </p>
          </div>
          <div class="service-card">
            <i class="fas fa-wind"></i>
            <h3>Indoor Air Quality (IAQ)</h3>
            <p>
              Solutions for superior indoor air quality, including filtration,
              ventilation, and humidity control.
            </p>
          </div>
          <div class="service-card">
            <i class="fas fa-robot"></i>
            <h3>Building Automation Systems (BAS)</h3>
            <p>
              Integrating advanced BAS for centralized control and optimized
              building performance.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="projects">
      <div class="container">
        <h2>Recent HVAC Projects</h2>
        <div class="projects-grid">
          <div class="project-card">
            <img
              src="https://images.unsplash.com/photo-1583912277729-c15917f7900d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
              alt="Office HVAC Upgrade"
            />
            <h3>Office Building HVAC Upgrade</h3>
            <p>
              Modernized climate control systems for a multi-story office
              complex, enhancing comfort and efficiency.
            </p>
          </div>
          <div class="project-card">
            <img
              src="https://images.unsplash.com/photo-1583912277729-c15917f7900d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
              alt="Retail HVAC Installation"
            />
            <h3>Retail Space HVAC Installation</h3>
            <p>
              Designed and installed a new, high-efficiency HVAC system for a
              large retail establishment.
            </p>
          </div>
          <div class="project-card">
            <img
              src="https://images.unsplash.com/photo-1583912277729-c15917f7900d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
              alt="Industrial HVAC Solution"
            />
            <h3>Industrial Facility Climate Control</h3>
            <p>
              Implemented a robust HVAC solution for a manufacturing plant,
              ensuring optimal working conditions.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="about">
      <div class="container">
        <div class="about-content">
          <div class="about-text">
            <h2>About Midwest Climate Solutions</h2>
            <p>
              Since 2003, Midwest Climate Solutions has been the trusted partner
              for commercial HVAC needs across the region. We are committed to
              delivering superior climate control, energy efficiency, and
              unparalleled service, ensuring optimal indoor environments for
              businesses of all sizes.
            </p>
            <div class="stats">
              <div class="stat">
                <h3>1000+</h3>
                <p>Systems Serviced</p>
              </div>
              <div class="stat">
                <h3>20+</h3>
                <p>Years Expertise</p>
              </div>
              <div class="stat">
                <h3>99%</h3>
                <p>Client Satisfaction</p>
              </div>
            </div>
          </div>
          <div class="about-image">
            <img
              src="https://images.unsplash.com/photo-1583912277729-c15917f7900d?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80"
              alt="HVAC Technicians"
            />
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="testimonials">
      <div class="container">
        <h2>What Our Clients Say About Our HVAC Services</h2>
        <div class="testimonial-slider">
          <div class="testimonial-card">
            <p>
              "Midwest Climate Solutions provided an outstanding HVAC
              installation for our new office. Their team was highly
              professional and the system works flawlessly!"
            </p>
            <h4>- Sarah L., Office Manager</h4>
          </div>
          <div class="testimonial-card">
            <p>
              "Their preventative maintenance program has significantly reduced
              our energy costs and kept our systems running efficiently. Highly
              recommend their expertise."
            </p>
          </div>
          <div class="testimonial-card">
            <p>
              "When our HVAC system failed unexpectedly, Midwest Climate
              Solutions responded immediately and had us back up and running in
              no time. Excellent emergency service!"
            </p>
            <h4>- Mark T., Restaurant Owner</h4>
          </div>
        </div>
        <div class="slider-nav">
          <span class="dot active" data-slide="0"></span>
          <span class="dot" data-slide="1"></span>
          <span class="dot" data-slide="2"></span>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="contact">
      <div class="container">
        <h2>Get In Touch</h2>
        <div class="contact-content">
          <div class="contact-info">
            <div class="contact-item">
              <i class="fas fa-phone"></i>
              <div>
                <h3>Phone</h3>
                <p>(555) 123-4567</p>
              </div>
            </div>
            <div class="contact-item">
              <i class="fas fa-envelope"></i>
              <div>
                <h3>Email</h3>
                <p>info@midwestclimatesolutions.com</p>
              </div>
            </div>
            <div class="contact-item">
              <i class="fas fa-map-marker-alt"></i>
              <div>
                <h3>Address</h3>
                <p>456 Climate Dr, Metroville, IL 60601</p>
              </div>
            </div>
          </div>
          <form class="contact-form">
            <input type="text" placeholder="Your Name" required />
            <input type="email" placeholder="Your Email" required />
            <textarea placeholder="Your Message" rows="5" required></textarea>
            <button type="submit" class="btn btn-primary">Send Message</button>
          </form>
        </div>
      </div>
    </section>
  </main>

  <footer>
    <div class="container">
      <p>&copy; 2024 Midwest Climate Solutions. All rights reserved.</p>
    </div>
  </footer>

  <script is:inline>
    document.addEventListener('DOMContentLoaded', function () {
      // Mobile navigation toggle
      const hamburger = document.querySelector('.hamburger');
      const navMenu = document.querySelector('.nav-menu');

      hamburger.addEventListener('click', function () {
        hamburger.classList.toggle('active');
        navMenu.classList.toggle('active');
      });

      // Close mobile menu when clicking on a link
      document.querySelectorAll('.nav-menu a').forEach((link) => {
        link.addEventListener('click', function () {
          hamburger.classList.remove('active');
          navMenu.classList.remove('active');
        });
      });

      // Smooth scrolling for navigation links
      document.querySelectorAll('a[href^="#"]').forEach((anchor) => {
        anchor.addEventListener('click', function (e) {
          e.preventDefault();
          const target = document.querySelector(this.getAttribute('href'));
          if (target) {
            target.scrollIntoView({
              behavior: 'smooth',
              block: 'start',
            });
          }
        });
      });

      // Contact form handling
      const contactForm = document.querySelector('.contact-form');
      contactForm.addEventListener('submit', function (e) {
        e.preventDefault();

        // Simple form validation
        const inputs = this.querySelectorAll('input, textarea');
        let isValid = true;

        inputs.forEach((input) => {
          if (!input.value.trim()) {
            isValid = false;
            input.style.borderColor = 'red';
          } else {
            input.style.borderColor = 'var(--light-color)';
          }
        });

        if (isValid) {
          alert('Thank you for your message! We will get back to you soon.');
          this.reset();
        } else {
          alert('Please fill in all fields.');
        }
      });

      // Navbar background on scroll
      window.addEventListener('scroll', function () {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 50) {
          navbar.style.background = 'rgba(255, 255, 255, 0.95)';
          navbar.style.backdropFilter = 'blur(10px)';
          navbar.style.boxShadow = '0 2px 15px rgba(0,0,0,0.08)';
        } else {
          navbar.style.background = 'var(--white)';
          navbar.style.backdropFilter = 'none';
          navbar.style.boxShadow = 'none';
        }
      });
    });

    // Intersection Observer for animations
    const observerOptions = {
      threshold: 0.1,
      rootMargin: '0px 0px -50px 0px',
    };

    const observer = new IntersectionObserver(function (entries) {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }
      });
    }, observerOptions);

    // Observe elements for animation
    document.addEventListener('DOMContentLoaded', function () {
      const animateElements = document.querySelectorAll(
        '.service-card, .about-content, .contact-content, .project-card, .testimonial-card'
      );

      animateElements.forEach((el) => {
        el.style.opacity = '0';
        el.style.transform = 'translateY(30px)';
        el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        observer.observe(el);
      });

      // Testimonial Slider
      const testimonialSlider = document.querySelector('.testimonial-slider');
      const dots = document.querySelectorAll('.slider-nav .dot');
      let currentSlide = 0;

      function showSlide(index) {
        testimonialSlider.style.transform = `translateX(${-index * 100}%)`;
        dots.forEach((dot, i) => {
          if (i === index) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
        currentSlide = index;
      }

      dots.forEach((dot) => {
        dot.addEventListener('click', function () {
          const slideIndex = parseInt(this.dataset.slide);
          showSlide(slideIndex);
        });
      });

      // Auto-advance slider
      setInterval(() => {
        currentSlide = (currentSlide + 1) % dots.length;
        showSlide(currentSlide);
      }, 5000); // Change slide every 5 seconds

      showSlide(0); // Initialize slider
    });
  </script>
</BaseLayout>