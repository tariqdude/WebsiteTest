---
import BasicLayout from '../layouts/BasicLayout.astro';
import Header from '../components/navigation/Header.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import Footer from '../components/navigation/Footer.astro';
---

<BasicLayout title="Enterprise Business Template">
  <Header />

  <main>
    <Hero />
    <Features />
  </main>

  <Footer />
</BasicLayout>
---

<BasicLayout
  title="Enterprise Business Template - Next-Gen Professional Website Solution"
  description="Ultra-modern, high-performance business website template built with Astro 5, React 19, and advanced Tailwind CSS. Featuring cutting-edge animations, glass morphism, and Fortune 500-ready design patterns."
>
  <Header currentPath="/" />

  <main id="main-content">
    <Hero />
    <Features />

    <!-- Testimonials Section -->
    <section class="section bg-white dark:bg-gray-800">
      <div class="container">
        <div class="mx-auto mb-16 max-w-3xl text-center">
          <div
            class="bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400 mb-4 inline-flex items-center rounded-full px-4 py-2 text-sm font-medium"
            data-aos="fade-up"
          >
            <svg class="mr-2 h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
              <path
                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
              ></path>
            </svg>
            Client Success Stories
          </div>

          <h2
            class="h2 mb-6 text-gray-900 dark:text-white"
            data-aos="fade-up"
            data-aos-delay="100"
          >
            Trusted by Industry Leaders
          </h2>

          <p
            class="body-lg text-gray-600 dark:text-gray-300"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            See how organizations worldwide are transforming their operations
            with our solutions.
          </p>
        </div>

        <!-- React Testimonial Carousel will be added here -->
        <div id="testimonial-carousel" data-aos="fade-up" data-aos-delay="300">
          <!-- Placeholder for now -->
          <div class="rounded-2xl bg-gray-50 p-8 text-center dark:bg-gray-700">
            <p class="mb-4 text-gray-600 dark:text-gray-300">
              "This platform has revolutionized how we manage our enterprise
              operations. The scalability and security features are exactly what
              we needed for our Fortune 500 company."
            </p>
            <div class="flex items-center justify-center space-x-4">
              <img
                src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80"
                alt="CEO"
                class="h-12 w-12 rounded-full object-cover"
              />
              <div class="text-left">
                <h4 class="font-semibold text-gray-900 dark:text-white">
                  John Smith
                </h4>
                <p class="text-sm text-gray-600 dark:text-gray-400">
                  CEO, TechCorp
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <!-- Main Content Sections -->
    <main>
      <Hero />
      <Features />
    </main>

    <!-- Navigation and Footer -->
    <Footer />
  </main>
</BasicLayout>

<Footer />
