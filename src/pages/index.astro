---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Hero from '../components/sections/Hero.astro';
import Features from '../components/sections/Features.astro';
import Testimonials from '../components/sections/Testimonials.astro';
import CallToAction from '../components/sections/CallToAction.astro';
---

<BaseLayout title="Home" description="Welcome to the WebsiteTest homepage.">
  <Header />
  <main>
    <!-- To use the animated SVG background, use: <Hero backgroundType="animated" /> -->
    <!-- To use a YouTube video background, use: <Hero backgroundType="youtube" youtubeId="dQw4w9WgXcQ" /> -->
    <Hero backgroundType="animated" />
    <Features />
    <Testimonials />
    <CallToAction />
  </main>
  <Footer />
</BaseLayout>
