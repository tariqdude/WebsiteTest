---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import MediaSection from '../components/MediaSection.astro';
---

<Layout title="ProBuild Construction - Professional Construction & HVAC Services" description="Leading construction and HVAC contractor serving residential and commercial clients. Licensed, insured, and trusted for quality craftsmanship.">
  <Navigation />
  
  <!-- Enhanced Hero Section -->
  <section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Dynamic Background -->
    <div class="absolute inset-0 bg-gradient-to-br from-brand-primary via-brand-primary to-brand-dark"></div>
    <div class="absolute inset-0 opacity-20">
      <svg width="60" height="60" viewBox="0 0 60 60" xmlns="http://www.w3.org/2000/svg" class="absolute inset-0 w-full h-full">
        <defs>
          <pattern id="hero-pattern" x="0" y="0" width="60" height="60" patternUnits="userSpaceOnUse">
            <g fill="none" fill-rule="evenodd">
              <g fill="#ffffff" fill-opacity="0.05">
                <path d="m36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z"/>
              </g>
            </g>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#hero-pattern)"/>
      </svg>
    </div>
    
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 xl:gap-16 items-center">
        <!-- Enhanced Hero Content -->
        <div class="text-center lg:text-left space-y-8" data-animate>
          <div class="space-y-6">
            <div class="inline-flex items-center bg-white/10 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-medium">
              <i class="fas fa-star text-yellow-400 mr-2"></i>
              Rated #1 Construction Service
            </div>
            
            <h1 class="text-4xl sm:text-5xl lg:text-6xl xl:text-7xl font-heading font-black text-white leading-tight">
              Build Your
              <span class="block text-transparent bg-clip-text bg-gradient-to-r from-brand-secondary to-yellow-400 animate-pulse-soft">
                Dream Space
              </span>
            </h1>
            
            <p class="text-lg sm:text-xl lg:text-2xl text-gray-100 leading-relaxed max-w-2xl mx-auto lg:mx-0">
              Professional construction, HVAC, and home improvement services. 
              <span class="font-semibold text-white">Licensed, insured, and trusted</span> by hundreds of satisfied customers.
            </p>
          </div>
          
          <!-- Enhanced CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 lg:gap-6 justify-center lg:justify-start">
            <a href="#contact" class="group relative inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white bg-gradient-to-r from-brand-secondary to-orange-600 rounded-2xl shadow-strong hover:shadow-xl transform hover:scale-105 transition-all duration-300 overflow-hidden">
              <span class="relative z-10 flex items-center">
                <i class="fas fa-phone mr-3"></i>
                Get Free Quote
              </span>
              <div class="absolute inset-0 bg-gradient-to-r from-orange-600 to-brand-secondary opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
            </a>
            
            <a href="#services" class="group inline-flex items-center justify-center px-8 py-4 text-lg font-bold text-white border-2 border-white/30 rounded-2xl hover:bg-white/10 hover:border-white transition-all duration-300 backdrop-blur-sm">
              <i class="fas fa-tools mr-3 group-hover:animate-bounce"></i>
              View Services
            </a>
          </div>
          
          <!-- Trust Indicators -->
          <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 pt-8">
            <div class="text-center">
              <div class="text-2xl font-bold text-white">15+</div>
              <div class="text-sm text-gray-300">Years Experience</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-white">500+</div>
              <div class="text-sm text-gray-300">Projects Done</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-white">24/7</div>
              <div class="text-sm text-gray-300">Emergency Service</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-white">100%</div>
              <div class="text-sm text-gray-300">Satisfaction</div>
            </div>
          </div>
        </div>
        
        <!-- Enhanced Hero Visual -->
        <div class="relative lg:pl-8" data-animate>
          <div class="grid grid-cols-2 gap-4 sm:gap-6">
            <!-- Feature Cards with Enhanced Design -->
            <div class="space-y-4 sm:space-y-6">
              <div class="feature-card bg-white/95 backdrop-blur-sm rounded-3xl p-6 lg:p-8 shadow-strong hover:shadow-xl transform hover:scale-105 transition-all duration-500 animate-float">
                <div class="w-12 h-12 bg-gradient-to-br from-brand-secondary to-orange-600 rounded-2xl flex items-center justify-center mb-4">
                  <i class="fas fa-hard-hat text-white text-xl"></i>
                </div>
                <h3 class="text-lg font-heading font-bold text-brand-dark mb-2">Licensed & Insured</h3>
                <p class="text-gray-600 text-sm leading-relaxed">Fully licensed contractors with comprehensive coverage</p>
              </div>
              
              <div class="feature-card bg-white/95 backdrop-blur-sm rounded-3xl p-6 lg:p-8 shadow-strong hover:shadow-xl transform hover:scale-105 transition-all duration-500 animate-float" style="animation-delay: 0.5s">
                <div class="w-12 h-12 bg-gradient-to-br from-brand-accent to-green-600 rounded-2xl flex items-center justify-center mb-4">
                  <i class="fas fa-clock text-white text-xl"></i>
                </div>
                <h3 class="text-lg font-heading font-bold text-brand-dark mb-2">24/7 Emergency</h3>
                <p class="text-gray-600 text-sm leading-relaxed">Round-the-clock emergency services available</p>
              </div>
            </div>
            
            <div class="space-y-4 sm:space-y-6 pt-8 sm:pt-12">
              <div class="feature-card bg-white/95 backdrop-blur-sm rounded-3xl p-6 lg:p-8 shadow-strong hover:shadow-xl transform hover:scale-105 transition-all duration-500 animate-float" style="animation-delay: 1s">
                <div class="w-12 h-12 bg-gradient-to-br from-yellow-500 to-yellow-600 rounded-2xl flex items-center justify-center mb-4">
                  <i class="fas fa-star text-white text-xl"></i>
                </div>
                <h3 class="text-lg font-heading font-bold text-brand-dark mb-2">5-Star Rated</h3>
                <p class="text-gray-600 text-sm leading-relaxed">Consistently rated 5 stars by satisfied clients</p>
              </div>
              
              <div class="feature-card bg-white/95 backdrop-blur-sm rounded-3xl p-6 lg:p-8 shadow-strong hover:shadow-xl transform hover:scale-105 transition-all duration-500 animate-float" style="animation-delay: 1.5s">
                <div class="w-12 h-12 bg-gradient-to-br from-brand-primary to-blue-600 rounded-2xl flex items-center justify-center mb-4">
                  <i class="fas fa-certificate text-white text-xl"></i>
                </div>
                <h3 class="text-lg font-heading font-bold text-brand-dark mb-2">Quality Guaranteed</h3>
                <p class="text-gray-600 text-sm leading-relaxed">All work backed by comprehensive warranty</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce-gentle">
      <a href="#about" class="flex flex-col items-center text-white hover:text-brand-secondary transition-colors duration-300">
        <span class="text-sm font-medium mb-2">Scroll Down</span>
        <i class="fas fa-chevron-down text-xl"></i>
      </a>
    </div>
  </section>

  <!-- Enhanced About Section -->
  <section id="about" class="py-16 lg:py-24 bg-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
      <svg width="40" height="40" viewBox="0 0 40 40" xmlns="http://www.w3.org/2000/svg" class="absolute inset-0 w-full h-full">
        <defs>
          <pattern id="about-pattern" x="0" y="0" width="40" height="40" patternUnits="userSpaceOnUse">
            <g fill="none" fill-rule="evenodd">
              <g fill="#1e40af" fill-opacity="0.4">
                <path d="M20 20c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10zm10 0c0-5.5-4.5-10-10-10s-10 4.5-10 10 4.5 10 10 10 10-4.5 10-10z"/>
              </g>
            </g>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#about-pattern)"/>
      </svg>
    </div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 xl:gap-16 items-center">
        <!-- About Content -->
        <div class="space-y-8" data-animate>
          <div class="space-y-6">
            <div class="inline-flex items-center bg-brand-secondary/10 text-brand-secondary px-4 py-2 rounded-full text-sm font-semibold">
              <i class="fas fa-award mr-2"></i>
              About ProBuild Construction
            </div>
            
            <h2 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-black text-brand-dark leading-tight">
              Building Excellence Since
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-secondary to-orange-600">2009</span>
            </h2>
            
            <p class="text-lg lg:text-xl text-gray-600 leading-relaxed">
              With over 15 years of experience in construction and HVAC services, ProBuild Construction has earned a reputation for 
              <span class="font-semibold text-brand-dark">exceptional quality and customer satisfaction</span>. We combine traditional 
              craftsmanship with modern techniques to deliver outstanding results.
            </p>
          </div>
          
          <!-- Achievement Grid -->
          <div class="grid grid-cols-2 gap-6">
            <div class="achievement-item p-6 bg-gradient-to-br from-brand-primary/5 to-brand-primary/10 rounded-2xl border border-brand-primary/20">
              <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-brand-primary/20 rounded-xl flex items-center justify-center">
                  <i class="fas fa-check text-brand-primary"></i>
                </div>
                <div>
                  <h4 class="font-bold text-brand-dark">15+ Years</h4>
                  <p class="text-sm text-gray-600">Industry Experience</p>
                </div>
              </div>
            </div>
            
            <div class="achievement-item p-6 bg-gradient-to-br from-brand-secondary/5 to-brand-secondary/10 rounded-2xl border border-brand-secondary/20">
              <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-brand-secondary/20 rounded-xl flex items-center justify-center">
                  <i class="fas fa-check text-brand-secondary"></i>
                </div>
                <div>
                  <h4 class="font-bold text-brand-dark">500+</h4>
                  <p class="text-sm text-gray-600">Completed Projects</p>
                </div>
              </div>
            </div>
            
            <div class="achievement-item p-6 bg-gradient-to-br from-brand-accent/5 to-brand-accent/10 rounded-2xl border border-brand-accent/20">
              <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-brand-accent/20 rounded-xl flex items-center justify-center">
                  <i class="fas fa-check text-brand-accent"></i>
                </div>
                <div>
                  <h4 class="font-bold text-brand-dark">Licensed</h4>
                  <p class="text-sm text-gray-600">& Fully Bonded</p>
                </div>
              </div>
            </div>
            
            <div class="achievement-item p-6 bg-gradient-to-br from-yellow-500/5 to-yellow-500/10 rounded-2xl border border-yellow-500/20">
              <div class="flex items-center space-x-3 mb-3">
                <div class="w-10 h-10 bg-yellow-500/20 rounded-xl flex items-center justify-center">
                  <i class="fas fa-check text-yellow-600"></i>
                </div>
                <div>
                  <h4 class="font-bold text-brand-dark">100%</h4>
                  <p class="text-sm text-gray-600">Quality Guarantee</p>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Service Tags -->
          <div class="flex flex-wrap gap-3">
            <span class="px-4 py-2 bg-brand-primary/10 text-brand-primary rounded-full text-sm font-medium">Residential Construction</span>
            <span class="px-4 py-2 bg-brand-secondary/10 text-brand-secondary rounded-full text-sm font-medium">Commercial HVAC</span>
            <span class="px-4 py-2 bg-brand-accent/10 text-brand-accent rounded-full text-sm font-medium">Emergency Services</span>
          </div>
        </div>
        
        <!-- About Visual -->
        <div class="relative" data-animate>
          <div class="grid grid-cols-2 gap-6">
            <div class="space-y-6">
              <div class="aspect-square bg-gradient-to-br from-brand-primary to-blue-600 rounded-3xl flex items-center justify-center shadow-strong">
                <div class="text-center text-white">
                  <i class="fas fa-users text-4xl mb-4 opacity-90"></i>
                  <p class="font-bold text-lg">Expert Team</p>
                  <p class="text-sm opacity-80">Professional Craftsmen</p>
                </div>
              </div>
              
              <div class="aspect-[4/5] bg-gradient-to-br from-brand-secondary to-orange-600 rounded-3xl flex items-center justify-center shadow-strong">
                <div class="text-center text-white p-6">
                  <i class="fas fa-tools text-5xl mb-4 opacity-90"></i>
                  <p class="font-bold text-xl">Modern Equipment</p>
                  <p class="text-sm opacity-80 mt-2">State-of-the-art tools for precision work</p>
                </div>
              </div>
            </div>
            
            <div class="space-y-6 pt-12">
              <div class="aspect-[4/5] bg-gradient-to-br from-brand-accent to-green-600 rounded-3xl flex items-center justify-center shadow-strong">
                <div class="text-center text-white p-6">
                  <i class="fas fa-award text-5xl mb-4 opacity-90"></i>
                  <p class="font-bold text-xl">Award Winning</p>
                  <p class="text-sm opacity-80 mt-2">Recognized for excellence in construction</p>
                </div>
              </div>
              
              <div class="aspect-square bg-gradient-to-br from-purple-500 to-purple-700 rounded-3xl flex items-center justify-center shadow-strong">
                <div class="text-center text-white">
                  <i class="fas fa-handshake text-4xl mb-4 opacity-90"></i>
                  <p class="font-bold text-lg">Trusted Service</p>
                  <p class="text-sm opacity-80">Customer Focused</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced Services Section -->
  <section id="services" class="py-16 lg:py-24 bg-gray-50 relative overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-brand-primary/5 to-transparent"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-full bg-gradient-to-r from-brand-secondary/5 to-transparent"></div>
    
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header -->
      <div class="text-center mb-16" data-animate>
        <div class="inline-flex items-center bg-brand-primary/10 text-brand-primary px-4 py-2 rounded-full text-sm font-semibold mb-6">
          <i class="fas fa-tools mr-2"></i>
          Professional Services
        </div>
        
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-heading font-black text-brand-dark mb-6 leading-tight">
          Comprehensive
          <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-secondary to-orange-600">Construction</span>
          Solutions
        </h2>
        
        <p class="text-lg lg:text-xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
          From residential renovations to commercial HVAC installations, we deliver exceptional quality 
          with unmatched attention to detail and professional craftsmanship.
        </p>
      </div>
      
      <!-- Services Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-animate>
        <!-- Construction Services -->
        <div class="service-card group bg-white rounded-3xl p-8 shadow-strong hover:shadow-xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-2 border border-gray-100 hover:border-brand-primary/20">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-brand-primary to-blue-600 rounded-3xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <i class="fas fa-hammer text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-brand-secondary rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <h3 class="text-xl lg:text-2xl font-heading font-bold text-brand-dark mb-4 group-hover:text-brand-primary transition-colors duration-300">
            Construction Services
          </h3>
          
          <p class="text-gray-600 mb-6 leading-relaxed">
            Complete construction solutions from foundation to finish with expert craftsmanship.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-secondary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-secondary text-xs"></i>
              </div>
              <span class="text-sm font-medium">New Construction & Build-outs</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-secondary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-secondary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Home Additions & Extensions</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-secondary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-secondary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Kitchen & Bathroom Remodels</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-secondary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-secondary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Commercial Renovations</span>
            </li>
          </ul>
          
          <button class="group-hover-btn w-full bg-gradient-to-r from-brand-primary to-blue-600 text-white font-bold py-3 px-6 rounded-2xl transform group-hover:scale-105 transition-all duration-300 hover:shadow-lg">
            <span class="flex items-center justify-center">
              Learn More
              <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300"></i>
            </span>
          </button>
        </div>

        <!-- HVAC Services -->
        <div class="service-card group bg-white rounded-3xl p-8 shadow-strong hover:shadow-xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-2 border border-gray-100 hover:border-brand-secondary/20">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-brand-secondary to-orange-600 rounded-3xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <i class="fas fa-fan text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-brand-primary rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          
          <h3 class="text-xl lg:text-2xl font-heading font-bold text-brand-dark mb-4 group-hover:text-brand-secondary transition-colors duration-300">
            HVAC Services
          </h3>
          
          <p class="text-gray-600 mb-6 leading-relaxed">
            Professional heating, ventilation, and air conditioning for optimal comfort.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-primary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-primary text-xs"></i>
              </div>
              <span class="text-sm font-medium">System Installation & Replacement</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-primary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-primary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Repair & Maintenance Services</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-primary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-primary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Ductwork Design & Installation</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-brand-primary/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-brand-primary text-xs"></i>
              </div>
              <span class="text-sm font-medium">Energy Efficiency Upgrades</span>
            </li>
          </ul>
          
          <button class="group-hover-btn w-full bg-gradient-to-r from-brand-secondary to-orange-600 text-white font-bold py-3 px-6 rounded-2xl transform group-hover:scale-105 transition-all duration-300 hover:shadow-lg">
            <span class="flex items-center justify-center">
              Learn More
              <i class="fas fa-arrow-right ml-2 group-hover:translate-x-1 transition-transform duration-300"></i>
            </span>
          </button>
        </div>

        <!-- Emergency Services -->
        <div class="service-card group bg-white rounded-3xl p-8 shadow-strong hover:shadow-xl transition-all duration-500 transform hover:scale-105 hover:-translate-y-2 border border-gray-100 hover:border-red-500/20">
          <div class="relative mb-6">
            <div class="w-20 h-20 bg-gradient-to-br from-red-500 to-red-700 rounded-3xl flex items-center justify-center group-hover:scale-110 transition-transform duration-300 shadow-lg">
              <i class="fas fa-exclamation-triangle text-white text-2xl"></i>
            </div>
            <div class="absolute -top-2 -right-2 w-6 h-6 bg-yellow-500 rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300 animate-pulse"></div>
          </div>
          
          <h3 class="text-xl lg:text-2xl font-heading font-bold text-brand-dark mb-4 group-hover:text-red-600 transition-colors duration-300">
            Emergency Services
          </h3>
          
          <p class="text-gray-600 mb-6 leading-relaxed">
            24/7 emergency response for urgent construction and HVAC issues.
          </p>
          
          <ul class="space-y-3 mb-8">
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-red-500/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-red-500 text-xs"></i>
              </div>
              <span class="text-sm font-medium">24/7 Emergency Availability</span>
            </li>
            <li class="flex items-center text-gray-700">
              <div class="w-5 h-5 bg-red-500/20 rounded-full flex items-center justify-center mr-3 flex-shrink-0">
                <i class="fas fa-check text-red-500 text-xs"></i>
              </div>
              <span class="text-sm font-medium">Rapid Response Time</span>
            </li>
