---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import { formatDate } from '../lib/utils';
import InteractiveCounter from '../components/frameworks/react/InteractiveCounter.jsx';
import ColorPalette from '../components/frameworks/vue/ColorPalette.vue';
import AnimatedBackground from '../components/ui/AnimatedBackground.jsx';
import CodeBlock from '../components/ui/CodeBlock.jsx';
import PerformanceMetrics from '../components/showcases/PerformanceMetrics.jsx';
import InteractiveTerminal from '../components/showcases/InteractiveTerminal.jsx';
import Advanced3DScene from '../components/showcases/Advanced3DScene.jsx';
import DataVisualizationDashboard from '../components/frameworks/react/DataVisualizationDashboard.jsx';
import SvelteSkillsDashboard from '../components/frameworks/svelte/SvelteSkillsDashboard.svelte';
import SolidStateDemo from '../components/frameworks/solid/SolidStateDemo.jsx';
import AdvancedForm from '../components/frameworks/react/AdvancedForm.tsx';
import CodeEditorShowcase from '../components/showcases/CodeEditorShowcase.jsx';
import GSAPAnimationShowcase from '../components/showcases/GSAPAnimationShowcase.jsx';
import PreactMiniDashboard from '../components/frameworks/preact/PreactMiniDashboard.jsx';
import SimpleDemo from '../components/ui/SimpleDemo.jsx';
import SimpleVueDemo from '../components/ui/SimpleVueDemo.vue';
import { ChevronRight, Rocket, Zap, Globe, Code, Layers, Sparkles } from 'lucide-react';
import { technologyStats } from '../data/stats.js';

// Fetch content collections
const allBlogPosts = await getCollection('blog');
const featuredPosts = allBlogPosts
  .filter(post => post.data.featured)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 2);

const allProjects = await getCollection('projects');
const featuredProjects = allProjects
  .filter(project => project.data.featured)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 3);

// Hero features
const features = [
  {
    icon: Rocket,
    title: 'Lightning Fast',
    description: 'Zero JavaScript by default. Only ship what you need.',
    color: 'text-blue-600 dark:text-blue-400',
    bg: 'bg-blue-50 dark:bg-blue-900/20'
  },
  {
    icon: Layers,
    title: 'Islands Architecture',
    description: 'Interactive components load independently.',
    color: 'text-purple-600 dark:text-purple-400',
    bg: 'bg-purple-50 dark:bg-purple-900/20'
  },
  {
    icon: Globe,
    title: 'Framework Agnostic',
    description: 'Use React, Vue, Svelte, or any framework you love.',
    color: 'text-green-600 dark:text-green-400',
    bg: 'bg-green-50 dark:bg-green-900/20'
  },
  {
    icon: Code,
    title: 'Developer Experience',
    description: 'Built-in TypeScript, Tailwind CSS, and hot reloading.',
    color: 'text-orange-600 dark:text-orange-400',
    bg: 'bg-orange-50 dark:bg-orange-900/20'
  },
  {
    icon: Zap,
    title: 'Build Optimized',
    description: 'Automatic optimizations for images, CSS, and JavaScript.',
    color: 'text-yellow-600 dark:text-yellow-400',
    bg: 'bg-yellow-50 dark:bg-yellow-900/20'
  },
  {
    icon: Sparkles,
    title: 'Content Collections',
    description: 'Type-safe content management with full TypeScript support.',
    color: 'text-pink-600 dark:text-pink-400',
    bg: 'bg-pink-50 dark:bg-pink-900/20'
  }
];
---

<Layout 
  title="Astro Showcase - Modern Web Development" 
  description="Experience the power of Astro's islands architecture with this comprehensive showcase featuring React, Vue, TypeScript, and modern web development best practices."
>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-900 dark:to-purple-900/20">
    <AnimatedBackground client:load />
    <div class="absolute inset-0 bg-grid-gray-100 dark:bg-grid-gray-800 opacity-20"></div>
    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
      <div class="text-center">
        <!-- Main Heading -->
        <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold text-gray-900 dark:text-white mb-6 animate-fade-in-up">
          <span class="block">The Future of</span>
          <span class="gradient-text block animate-gradient-x bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600">Web Development</span>
        </h1>
        
        <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto animate-fade-in-up animation-delay-200">
          Experience Astro's islands architecture with zero JavaScript by default, 
          framework-agnostic components, and lightning-fast performance.
        </p>
        
        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12 animate-fade-in-up animation-delay-400">
          <a
            href="/WebsiteTest/showcase"
            class="btn-primary text-lg px-8 py-4 group bg-gradient-to-r from-purple-600 to-blue-600 hover:from-purple-700 hover:to-blue-700"
          >
            üöÄ View Full Showcase
            <ChevronRight className="ml-2 w-5 h-5 group-hover:translate-x-1 transition-transform" />
          </a>
          <a
            href="/WebsiteTest/projects"
            class="btn-secondary text-lg px-8 py-4"
          >
            Explore Projects
          </a>
        </div>

        <!-- Stats -->
        <div class="animate-fade-in-up animation-delay-600">
          <PerformanceMetrics client:load />
        </div>
      </div>
    </div>
  </section>

  <!-- Live Performance Monitoring -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Real-Time Performance
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Monitor your application's performance metrics in real-time. 
          See how Astro's optimizations deliver exceptional user experiences.
        </p>
      </div>
      <div class="max-w-6xl mx-auto">
        <PerformanceMetrics client:visible />
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Why Choose Astro?
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Astro delivers the best developer experience with industry-leading performance
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {features.map(({ icon: Icon, title, description, color, bg }, index) => (
          <div 
            class={`p-6 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-primary-300 dark:hover:border-primary-600 transition-all duration-300 hover:shadow-lg animate-fade-in-up`}
            style={`animation-delay: ${index * 100}ms`}
          >
            <div class={`inline-flex p-3 rounded-xl ${bg} mb-4`}>
              <Icon className={`w-6 h-6 ${color}`} />
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {title}
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              {description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Interactive Islands Demo -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Islands Architecture Demo
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          Interactive components from different frameworks working together seamlessly
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- React Component -->
        <div class="space-y-4">
          <div class="flex items-center space-x-2 mb-4">
            <div class="w-4 h-4 bg-blue-500 rounded-full"></div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              React Island
            </h3>
            <span class="text-sm text-gray-500 dark:text-gray-400 bg-blue-100 dark:bg-blue-900 px-2 py-1 rounded">
              client:load
            </span>
          </div>
          
          <!-- Reliable demo first -->
          <SimpleDemo client:load title="React Counter" type="counter" />
          
          <!-- Advanced component below -->
          <div class="mt-4">
            <InteractiveCounter client:load />
          </div>
        </div>
        
        <!-- Vue Component -->
        <div class="space-y-4">
          <div class="flex items-center space-x-2 mb-4">
            <div class="w-4 h-4 bg-green-500 rounded-full"></div>
            <h3 class="text-lg font-semibold text-gray-900 dark:text-white">
              Vue Island
            </h3>
            <span class="text-sm text-gray-500 dark:text-gray-400 bg-green-100 dark:bg-green-900 px-2 py-1 rounded">
              client:visible
            </span>
          </div>
          
          <!-- Reliable Vue demo first -->
          <SimpleVueDemo client:load />
          
          <!-- Advanced component below -->
          <div class="mt-4">
            <ColorPalette client:visible />
          </div>
        </div>
      </div>
      
      <!-- Code Example -->
      <div class="mt-16 max-w-4xl mx-auto">
        <CodeBlock 
          client:only="react"
          code={`<!-- React component loads immediately -->
<InteractiveCounter client:only="react" />

<!-- Vue component loads when visible -->
<ColorPalette client:only="vue" />

<!-- Advanced components with conditional loading -->
<PerformanceMetrics client:only="react" />
<AnimatedBackground client:only="react" />
<InteractiveTerminal client:only="react" />`}
          language="astro"
          title="index.astro"
        />
      </div>
    </div>
  </section>

  <!-- Advanced Showcase Components -->
  <section class="py-20 bg-gradient-to-br from-gray-50 via-blue-50 to-purple-50 dark:from-gray-900 dark:via-blue-900/20 dark:to-purple-900/20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          üöÄ Advanced Framework Showcase
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Explore cutting-edge web technologies with React, Vue, Svelte, Solid.js, Preact, and more - all working together in perfect harmony
        </p>
      </div>

      <!-- 3D WebGL Scene -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            üéÆ 3D WebGL with Three.js
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Real-time 3D graphics, lighting, and interactive controls
          </p>
        </div>
        <Advanced3DScene client:only="react" />
      </div>

      <!-- Data Visualization Dashboard -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            üìä Data Visualization Hub
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            D3.js and Chart.js working together for stunning data stories
          </p>
        </div>
        <DataVisualizationDashboard client:visible />
      </div>

      <!-- Framework Comparison Grid -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-16">
        <!-- Svelte Skills Dashboard -->
        <div class="space-y-4">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
              üü† Svelte Animation Magic
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Smooth animations with Svelte's built-in motion library
            </p>
          </div>
          <SvelteSkillsDashboard client:visible />
        </div>

        <!-- Solid.js State Management -->
        <div class="space-y-4">
          <div class="text-center mb-6">
            <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
              üîµ Solid.js Fine-Grained Reactivity
            </h3>
            <p class="text-gray-600 dark:text-gray-300">
              Ultra-fast updates with surgical precision
            </p>
          </div>
          <SolidStateDemo client:visible />
        </div>
      </div>

      <!-- Advanced Form with React Hook Form -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            üìù Advanced Form Validation
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            React Hook Form + Zod validation + TypeScript for bulletproof forms
          </p>
        </div>
        <AdvancedForm client:visible />
      </div>

      <!-- Code Editor Showcase -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            üíª Monaco Code Editor
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Full VS Code editor experience with syntax highlighting and IntelliSense
          </p>
        </div>
        <CodeEditorShowcase client:visible />
      </div>

      <!-- GSAP Animation Studio -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            üé¨ GSAP Animation Studio
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Professional animations with GreenSock's industry-standard library
          </p>
        </div>
        <GSAPAnimationShowcase client:visible />
      </div>

      <!-- Preact Lightweight Demo -->
      <div class="mb-16">
        <div class="text-center mb-8">
          <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
            ‚ö° Preact Mini Dashboard
          </h3>
          <p class="text-gray-600 dark:text-gray-300">
            Same React API but only 3KB - perfect for performance-critical apps
          </p>
        </div>
        <PreactMiniDashboard client:visible />
      </div>
    </div>
  </section>

  <!-- Framework Statistics -->
  <section class="py-20 bg-white dark:bg-gray-900">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          üèÜ Multi-Framework Excellence
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-2xl mx-auto">
          All frameworks working together in a single application
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        {[
          { name: 'React', color: 'text-blue-500', bg: 'bg-blue-100 dark:bg-blue-900/20', icon: '‚öõÔ∏è', version: '18.3' },
          { name: 'Vue', color: 'text-green-500', bg: 'bg-green-100 dark:bg-green-900/20', icon: 'üü¢', version: '3.5' },
          { name: 'Svelte', color: 'text-orange-500', bg: 'bg-orange-100 dark:bg-orange-900/20', icon: 'üü†', version: '5.0' },
          { name: 'Solid.js', color: 'text-blue-600', bg: 'bg-blue-100 dark:bg-blue-900/20', icon: 'üîµ', version: '1.8' },
          { name: 'Preact', color: 'text-purple-500', bg: 'bg-purple-100 dark:bg-purple-900/20', icon: 'üíú', version: '10.0' },
          { name: 'Three.js', color: 'text-gray-600', bg: 'bg-gray-100 dark:bg-gray-800', icon: 'üéÆ', version: 'r160' }
        ].map((framework) => (
          <div  class={`text-center p-6 rounded-xl ${framework.bg} hover:scale-105 transition-transform duration-300`}>
            <div class="text-4xl mb-3">{framework.icon}</div>
            <h3 class={`font-bold ${framework.color} text-lg mb-1`}>{framework.name}</h3>
            <p class="text-sm text-gray-600 dark:text-gray-400">v{framework.version}</p>
          </div>
        ))}
      </div>

      <!-- Technology Stats -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8">
        {technologyStats.map((stat) => (
          <div class="text-center">
            <div class="text-3xl mb-2">{stat.icon}</div>
            <div class="text-3xl font-bold text-gray-900 dark:text-white mb-1">{stat.value}</div>
            <div class="text-sm text-gray-600 dark:text-gray-400">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Interactive Terminal Demo -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800/50">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          Interactive Developer Tools
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Experience advanced interactive components that showcase the power of islands architecture.
          Try the terminal below to explore project information and commands.
        </p>
      </div>
      <div class="max-w-4xl mx-auto">
        <InteractiveTerminal client:visible />
      </div>
    </div>
  </section>

  <!-- Featured Projects -->
  {featuredProjects.length > 0 && (
    <section class="py-20 bg-white dark:bg-gray-900">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-16">
          <div>
            <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
              Featured Projects
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
              Showcasing real-world applications built with modern technologies
            </p>
          </div>
          <a
            href="/WebsiteTest/projects"
            class="hidden md:flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium group"
          >
            View All Projects
            <ChevronRight className="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" />
          </a>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredProjects.map((project) => (
            <article  class="card group hover:shadow-xl transition-all duration-300">
              <div class="aspect-video bg-gradient-to-br from-primary-100 to-purple-100 dark:from-primary-900 dark:to-purple-900 rounded-lg mb-4 overflow-hidden">
                <img 
                  src={project.data.image} 
                  alt={project.data.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                {project.data.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4">
                {project.data.description}
              </p>
              <div class="flex flex-wrap gap-2 mb-4">
                {project.data.tech.slice(0, 3).map((tech) => (
                  <span  class="text-xs bg-gray-100 dark:bg-gray-700 text-gray-700 dark:text-gray-300 px-2 py-1 rounded">
                    {tech}
                  </span>
                ))}
                {project.data.tech.length > 3 && (
                  <span class="text-xs text-gray-500 dark:text-gray-400 px-2 py-1">
                    +{project.data.tech.length - 3} more
                  </span>
                )}
              </div>
              <div class="flex space-x-4">
                {project.data.demo && (
                  <a
                    href={project.data.demo}
                    class="text-sm text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Live Demo ‚Üí
                  </a>
                )}
                {project.data.github && (
                  <a
                    href={project.data.github}
                    class="text-sm text-gray-600 hover:text-gray-700 dark:text-gray-400 dark:hover:text-gray-300 font-medium"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    GitHub ‚Üí
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
        
        <div class="text-center mt-12 md:hidden">
          <a href="/WebsiteTest/projects" class="btn-primary">
            View All Projects
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Featured Blog Posts -->
  {featuredPosts.length > 0 && (
    <section class="py-20 bg-gray-50 dark:bg-gray-800">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between mb-16">
          <div>
            <h2 class="text-3xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
              Latest Insights
            </h2>
            <p class="text-xl text-gray-600 dark:text-gray-300">
              Thoughts on modern web development and best practices
            </p>
          </div>
          <a
            href="/WebsiteTest/blog"
            class="hidden md:flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium group"
          >
            View All Posts
            <ChevronRight className="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" />
          </a>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          {featuredPosts.map((post, index) => (
            <article  class={`card group hover:shadow-xl transition-all duration-300 ${index === 0 ? 'lg:row-span-2' : ''}`}>
              <div class="flex items-center space-x-3 mb-4">
                <img
                  src={`/images/avatars/${post.data.author.toLowerCase().replace(' ', '-')}.jpg`}
                  alt={post.data.author}
                  class="w-10 h-10 rounded-full"
                  loading="lazy"
                />
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    {post.data.author}
                  </p>
                  <p class="text-xs text-gray-500 dark:text-gray-400">
                    {formatDate(post.data.pubDate)}
                  </p>
                </div>
              </div>
              
              <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">
                <a href={`/blog/${post.slug}`}>
                  {post.data.title}
                </a>
              </h3>
              
              <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-3">
                {post.data.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {post.data.tags.slice(0, 3).map((tag) => (
                  <span  class="text-xs bg-primary-100 dark:bg-primary-900 text-primary-700 dark:text-primary-300 px-2 py-1 rounded">
                    {tag}
                  </span>
                ))}
              </div>
              
              <a
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-primary-600 hover:text-primary-700 dark:text-primary-400 dark:hover:text-primary-300 font-medium group"
              >
                Read Article
                <ChevronRight className="ml-1 w-4 h-4 group-hover:translate-x-1 transition-transform" />
              </a>
            </article>
          ))}
        </div>
        
