---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Midwest Climate Solutions - Commercial HVAC Experts"
  description="Leading commercial HVAC solutions for businesses across the Great Lakes region. Expert installation, maintenance, and energy-efficient climate control systems."
>
  <!-- Navigation Header -->
  <header class="bg-transparent fixed top-0 w-full z-50 transition-all duration-300">
    <nav class="container mx-auto flex justify-between items-center h-20 px-6" role="navigation" aria-label="Main navigation">
      <div class="flex items-center">
        <i class="fas fa-fan text-orange-500 text-3xl mr-3 animate-spin-slow" aria-hidden="true"></i>
        <span class="font-bold text-white text-2xl lg:text-3xl tracking-wide">
          Midwest Climate Solutions
        </span>
      </div>
      
      <!-- Desktop Navigation -->
      <ul class="hidden lg:flex space-x-8 xl:space-x-12">
        <li><a href="#home" class="nav-link text-white hover:text-orange-400 font-medium text-lg transition-colors duration-300 relative group">
          Home
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full" aria-hidden="true"></span>
        </a></li>
        <li><a href="#services" class="nav-link text-white hover:text-orange-400 font-medium text-lg transition-colors duration-300 relative group">
          Services
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full" aria-hidden="true"></span>
        </a></li>
        <li><a href="#projects" class="nav-link text-white hover:text-orange-400 font-medium text-lg transition-colors duration-300 relative group">
          Projects
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full" aria-hidden="true"></span>
        </a></li>
        <li><a href="#about" class="nav-link text-white hover:text-orange-400 font-medium text-lg transition-colors duration-300 relative group">
          About
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full" aria-hidden="true"></span>
        </a></li>
        <li><a href="#contact" class="nav-link text-white hover:text-orange-400 font-medium text-lg transition-colors duration-300 relative group">
          Contact
          <span class="absolute bottom-0 left-0 w-0 h-0.5 bg-orange-500 transition-all duration-300 group-hover:w-full" aria-hidden="true"></span>
        </a></li>
      </ul>
      
      <!-- Mobile Menu Toggle -->
      <button 
        class="lg:hidden flex flex-col space-y-1.5 cursor-pointer p-2" 
        id="hamburger"
        aria-expanded="false"
        aria-label="Toggle mobile menu"
      >
        <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
        <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
        <span class="block w-6 h-0.5 bg-white transition-all duration-300"></span>
      </button>
    </nav>
    
    <!-- Mobile Navigation Menu -->
    <div 
      id="mobile-menu" 
      class="lg:hidden bg-white shadow-xl fixed top-20 left-0 w-full transform -translate-x-full transition-transform duration-300 ease-out"
      role="menu"
    >
      <ul class="flex flex-col items-center py-6 space-y-4">
        <li><a href="#home" class="text-gray-800 hover:text-blue-600 font-medium text-lg transition-colors duration-300" role="menuitem">Home</a></li>
        <li><a href="#services" class="text-gray-800 hover:text-blue-600 font-medium text-lg transition-colors duration-300" role="menuitem">Services</a></li>
        <li><a href="#projects" class="text-gray-800 hover:text-blue-600 font-medium text-lg transition-colors duration-300" role="menuitem">Projects</a></li>
        <li><a href="#about" class="text-gray-800 hover:text-blue-600 font-medium text-lg transition-colors duration-300" role="menuitem">About</a></li>
        <li><a href="#contact" class="text-gray-800 hover:text-blue-600 font-medium text-lg transition-colors duration-300" role="menuitem">Contact</a></li>
      </ul>
    </div>
  </header>

  <main>
    <!-- Hero Section -->
    <section 
      id="home" 
      class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20 min-h-screen flex items-center overflow-hidden"
    >
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"60\" height=\"60\" viewBox=\"0 0 60 60\"><g fill=\"%23ffffff\" fill-opacity=\"0.1\"><circle cx=\"30\" cy=\"30\" r=\"2\"/></g></svg>');"></div>
      </div>
      
      <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight text-shadow-lg">
            Leading Commercial <span class="text-orange-400">HVAC Solutions</span>
          </h1>
          <p class="text-lg md:text-xl text-blue-100 mb-8 max-w-2xl leading-relaxed">
            Optimizing indoor environments for businesses across the Great Lakes region with advanced HVAC systems, energy-efficient solutions, and unparalleled service excellence.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 sm:gap-6">
            <a href="#contact" class="btn btn-primary text-center">
              <i class="fas fa-envelope mr-2" aria-hidden="true"></i>
              Get Free Quote
            </a>
            <a href="#projects" class="btn btn-outline text-center">
              <i class="fas fa-eye mr-2" aria-hidden="true"></i>
              View Our Work
            </a>
          </div>
        </div>
      </div>
      
      <!-- Scroll Indicator -->
      <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
        <i class="fas fa-chevron-down text-white text-2xl opacity-70" aria-hidden="true"></i>
      </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-16 md:py-24 bg-gray-50">
      <div class="container mx-auto px-6">
        <h2 class="section-heading">Our Comprehensive HVAC Services</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-fan text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">HVAC System Installation</h3>
            <p class="text-gray-600 leading-relaxed">Expert installation of new commercial HVAC systems, tailored to your facility's unique requirements and energy efficiency goals.</p>
          </div>
          
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-wrench text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Preventative Maintenance</h3>
            <p class="text-gray-600 leading-relaxed">Proactive maintenance programs to ensure peak performance, maximum efficiency, and extended lifespan of your HVAC systems.</p>
          </div>
          
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-tools text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Emergency Repairs</h3>
            <p class="text-gray-600 leading-relaxed">24/7 rapid response for critical HVAC system breakdowns, minimizing downtime and maintaining comfortable environments.</p>
          </div>
          
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-leaf text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Energy Efficiency Solutions</h3>
            <p class="text-gray-600 leading-relaxed">Smart controls and energy management strategies to significantly reduce consumption and operational costs.</p>
          </div>
          
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-wind text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Indoor Air Quality</h3>
            <p class="text-gray-600 leading-relaxed">Advanced air quality solutions including filtration systems, ventilation optimization, and humidity control.</p>
          </div>
          
          <div class="service-card card p-8 text-center group">
            <div class="w-16 h-16 mx-auto mb-6 bg-blue-100 rounded-full flex items-center justify-center group-hover:bg-blue-600 transition-colors duration-300">
              <i class="fas fa-microchip text-blue-600 group-hover:text-white text-2xl transition-colors duration-300" aria-hidden="true"></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-4">Building Automation</h3>
            <p class="text-gray-600 leading-relaxed">Cutting-edge building automation systems for centralized control and optimized facility performance.</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="py-16 md:py-24 bg-white">
      <div class="container mx-auto px-6">
        <h2 class="section-heading">Recent HVAC Projects</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
          <article class="project-card card overflow-hidden group">
            <div class="relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1486406146926-c627a92ad1ab?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                alt="Modern office building with advanced HVAC system" 
                class="w-full h-64 object-cover transition duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-blue-900 bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Office Building HVAC Upgrade</h3>
              <p class="text-gray-600 leading-relaxed">Complete modernization of climate control systems for a 15-story office complex, improving energy efficiency by 40%.</p>
              <div class="mt-4">
                <span class="inline-block bg-blue-100 text-blue-800 text-sm px-3 py-1 rounded-full">Commercial</span>
              </div>
            </div>
          </article>
          
          <article class="project-card card overflow-hidden group">
            <div class="relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1441986300917-64674bd600d8?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                alt="Retail space with efficient HVAC installation" 
                class="w-full h-64 object-cover transition duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-blue-900 bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Retail Space Climate Control</h3>
              <p class="text-gray-600 leading-relaxed">Custom HVAC design and installation for a 50,000 sq ft retail establishment with zone-specific temperature control.</p>
              <div class="mt-4">
                <span class="inline-block bg-orange-100 text-orange-800 text-sm px-3 py-1 rounded-full">Retail</span>
              </div>
            </div>
          </article>
          
          <article class="project-card card overflow-hidden group">
            <div class="relative overflow-hidden">
              <img 
                src="https://images.unsplash.com/photo-1504307651254-35680f356dfd?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                alt="Industrial facility with specialized HVAC system" 
                class="w-full h-64 object-cover transition duration-500 group-hover:scale-105"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-blue-900 bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300"></div>
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 mb-3">Manufacturing Facility Solution</h3>
              <p class="text-gray-600 leading-relaxed">Industrial-grade HVAC system for a manufacturing plant, ensuring optimal working conditions and air quality standards.</p>
              <div class="mt-4">
                <span class="inline-block bg-green-100 text-green-800 text-sm px-3 py-1 rounded-full">Industrial</span>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="py-16 md:py-24 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-center">
          <div class="about-content lg:order-2">
            <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
              About <span class="text-blue-600">Midwest Climate Solutions</span>
            </h2>
            <div class="w-16 h-1 bg-orange-500 mb-8 rounded-full"></div>
            <p class="text-lg text-gray-700 mb-6 leading-relaxed">
              Since 2003, Midwest Climate Solutions has been the trusted partner for commercial HVAC needs across the Great Lakes region. We are committed to delivering superior climate control solutions, energy efficiency innovations, and unparalleled service excellence.
            </p>
            <p class="text-gray-600 mb-8 leading-relaxed">
              Our team of certified technicians and engineers brings decades of combined experience to every project, ensuring optimal indoor environments for businesses of all sizes and industries.
            </p>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-6 lg:gap-8">
              <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="text-3xl lg:text-4xl font-bold text-orange-500 mb-2">1000+</div>
                <div class="text-sm text-gray-600 font-medium uppercase tracking-wide">Systems Serviced</div>
              </div>
              <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="text-3xl lg:text-4xl font-bold text-orange-500 mb-2">20+</div>
                <div class="text-sm text-gray-600 font-medium uppercase tracking-wide">Years Experience</div>
              </div>
              <div class="text-center p-4 bg-white rounded-lg shadow-sm">
                <div class="text-3xl lg:text-4xl font-bold text-orange-500 mb-2">99%</div>
                <div class="text-sm text-gray-600 font-medium uppercase tracking-wide">Client Satisfaction</div>
              </div>
            </div>
          </div>
          
          <div class="lg:order-1 relative">
            <div class="relative rounded-xl overflow-hidden shadow-2xl">
              <img 
                src="https://images.unsplash.com/photo-1581094288338-2314dddb7ece?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80" 
                alt="HVAC technicians working on commercial system" 
                class="w-full h-96 lg:h-[500px] object-cover"
                loading="lazy"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-blue-900/20 to-transparent"></div>
            </div>
            
            <!-- Floating Badge -->
            <div class="absolute -bottom-6 -right-6 bg-orange-500 text-white p-6 rounded-xl shadow-xl">
              <div class="text-center">
                <div class="text-2xl font-bold">24/7</div>
                <div class="text-sm font-medium">Emergency Service</div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Testimonials Section -->
    <section id="testimonials" class="py-16 md:py-24 bg-blue-800 text-white relative overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" width=\"40\" height=\"40\" viewBox=\"0 0 40 40\"><g fill=\"%23ffffff\" fill-opacity=\"0.1\"><rect width=\"2\" height=\"2\" x=\"19\" y=\"19\"/></g></svg>');"></div>
      </div>
      
      <div class="container mx-auto px-6 relative">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-center mb-12">
          What Our Clients Say
        </h2>
        <div class="w-16 h-1 bg-orange-500 mx-auto mb-16 rounded-full"></div>
        
        <div class="relative overflow-hidden h-auto" id="testimonial-slider">
          <!-- Testimonial 1 -->
          <div class="testimonial-card w-full p-8 text-center flex flex-col justify-center items-center">
            <div class="max-w-4xl mx-auto">
              <i class="fas fa-quote-left text-6xl text-orange-400 mb-6 opacity-50" aria-hidden="true"></i>
              <blockquote class="text-lg md:text-xl lg:text-2xl italic text-blue-100 mb-8 leading-relaxed">
                "Midwest Climate Solutions provided an outstanding HVAC installation for our new office. Their team was highly professional, completed the project on time, and the system works flawlessly. We couldn't be happier!"
              </blockquote>
              <cite class="text-lg font-semibold text-orange-400">Sarah L., Office Manager</cite>
            </div>
          </div>
          
          <!-- Testimonial 2 -->
          <div class="testimonial-card w-full p-8 text-center flex flex-col justify-center items-center">
            <div class="max-w-4xl mx-auto">
              <i class="fas fa-quote-left text-6xl text-orange-400 mb-6 opacity-50" aria-hidden="true"></i>
              <blockquote class="text-lg md:text-xl lg:text-2xl italic text-blue-100 mb-8 leading-relaxed">
                "Their preventative maintenance program has significantly reduced our energy costs and kept our systems running efficiently year-round. The team is knowledgeable and always professional. Highly recommend!"
              </blockquote>
              <cite class="text-lg font-semibold text-orange-400">John D., Property Manager</cite>
            </div>
          </div>
          
          <!-- Testimonial 3 -->
          <div class="testimonial-card w-full p-8 text-center flex flex-col justify-center items-center">
            <div class="max-w-4xl mx-auto">
              <i class="fas fa-quote-left text-6xl text-orange-400 mb-6 opacity-50" aria-hidden="true"></i>
              <blockquote class="text-lg md:text-xl lg:text-2xl italic text-blue-100 mb-8 leading-relaxed">
                "When our HVAC system failed unexpectedly during peak hours, Midwest Climate Solutions responded immediately and had us back up and running within hours. Their emergency service is exceptional!"
              </blockquote>
              <cite class="text-lg font-semibold text-orange-400">Mark T., Restaurant Owner</cite>
            </div>
          </div>
        </div>
        
        <!-- Navigation Dots -->
        <div class="flex justify-center space-x-3 mt-12" id="slider-nav" role="tablist" aria-label="Testimonial navigation">
          <button 
            class="dot w-3 h-3 bg-white/50 hover:bg-white/80 rounded-full cursor-pointer transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-400" 
            data-slide="0"
            role="tab"
            aria-label="View testimonial 1"
          ></button>
          <button 
            class="dot w-3 h-3 bg-white/50 hover:bg-white/80 rounded-full cursor-pointer transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-400" 
            data-slide="1"
            role="tab"
            aria-label="View testimonial 2"
          ></button>
          <button 
            class="dot w-3 h-3 bg-white/50 hover:bg-white/80 rounded-full cursor-pointer transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-orange-400" 
            data-slide="2"
            role="tab"
            aria-label="View testimonial 3"
          ></button>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="py-16 md:py-24 bg-gray-900 text-white">
      <div class="container mx-auto px-6">
        <div class="text-center mb-16">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">Get In Touch</h2>
          <div class="w-16 h-1 bg-orange-500 mx-auto mb-6 rounded-full"></div>
          <p class="text-xl text-gray-300 max-w-2xl mx-auto">
            Ready to optimize your commercial HVAC system? Contact us for a free consultation and quote.
          </p>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 lg:gap-16 items-start">
          <!-- Contact Information -->
          <div class="contact-content space-y-8">
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-phone text-white text-xl" aria-hidden="true"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">Phone</h3>
                <a href="tel:+15551234567" class="text-gray-300 hover:text-orange-400 text-lg transition-colors duration-300">
                  (555) 123-4567
                </a>
                <p class="text-sm text-gray-400 mt-1">24/7 Emergency Service Available</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-envelope text-white text-xl" aria-hidden="true"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">Email</h3>
                <a href="mailto:info@midwestclimatesolutions.com" class="text-gray-300 hover:text-orange-400 text-lg transition-colors duration-300">
                  info@midwestclimatesolutions.com
                </a>
                <p class="text-sm text-gray-400 mt-1">We respond within 24 hours</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-map-marker-alt text-white text-xl" aria-hidden="true"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">Address</h3>
                <address class="text-gray-300 text-lg not-italic">
                  456 Climate Drive<br>
                  Metroville, IL 60601
                </address>
                <p class="text-sm text-gray-400 mt-1">Serving the Great Lakes Region</p>
              </div>
            </div>
            
            <div class="flex items-start space-x-4">
              <div class="flex-shrink-0 w-12 h-12 bg-orange-500 rounded-lg flex items-center justify-center">
                <i class="fas fa-clock text-white text-xl" aria-hidden="true"></i>
              </div>
              <div>
                <h3 class="text-xl font-semibold mb-2">Business Hours</h3>
                <div class="text-gray-300 text-lg">
                  <div>Mon - Fri: 7:00 AM - 6:00 PM</div>
                  <div>Sat: 8:00 AM - 4:00 PM</div>
                  <div>Sun: Emergency Service Only</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Contact Form -->
          <div class="bg-white p-8 lg:p-10 rounded-xl shadow-2xl">
            <h3 class="text-2xl font-semibold text-gray-900 mb-6">Request a Free Quote</h3>
            <form class="space-y-6" novalidate>
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                  <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name *</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name"
                    required 
                    class="w-full p-4 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-transparent transition duration-300 text-gray-800 bg-gray-50"
                    placeholder="Enter your full name"
                  />
                </div>
                
                <div>
                  <label for="company" class="block text-sm font-medium text-gray-700 mb-2">Company</label>
                  <input 
                    type="text" 
