---
import Layout from '../layouts/Layout.astro';
---

<Layout title="500: Server Error">
  <main class="flex flex-col items-center justify-center text-center h-screen">
    <h1 class="text-9xl font-bold text-red-500">500</h1>
    <p class="text-2xl md:text-3xl font-light text-gray-800 dark:text-gray-200 mb-4">
      Oops! Something went wrong on our end.
    </p>
    <p class="text-lg text-gray-600 dark:text-gray-400 mb-8">
      We're working to fix the problem. Please try again later.
    </p>
    <a href="/" class="px-6 py-3 text-lg font-semibold text-white bg-gray-600 rounded-md hover:bg-gray-700 transition-colors duration-300">
      Go back home
    </a>
  </main>
</Layout>
