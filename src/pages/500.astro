---
import Layout from '../layouts/Layout.astro';
import AnimatedBackground from '../components/ui/AnimatedBackground.jsx';
---

<Layout title='500: Server Error'>
  <div class='relative min-h-screen overflow-hidden'>
    <AnimatedBackground client:load />

    <main
      class='relative z-10 flex min-h-screen flex-col items-center justify-center px-4 text-center'
    >
      <div class='mx-auto max-w-2xl'>
        <!-- Animated 500 with Error Effect -->
        <div class='mb-8'>
          <h1
            class='animate-pulse bg-gradient-to-r from-red-600 via-orange-600 to-yellow-600 bg-clip-text text-8xl font-bold text-transparent md:text-9xl'
          >
            500
          </h1>
          <div class='mt-2 flex justify-center'>
            <div
              class='h-1 w-24 animate-ping rounded bg-gradient-to-r from-red-600 to-orange-600'
            >
            </div>
          </div>
        </div>

        <!-- Error Message -->
        <div class='mb-8 space-y-4'>
          <p
            class='text-2xl font-light text-gray-800 dark:text-gray-200 md:text-3xl'
          >
            Oops! Something went wrong on our end.
          </p>
          <p class='text-lg text-gray-600 dark:text-gray-400'>
            We're working to fix the problem. Please try again later.
          </p>
        </div>

        <!-- Status Indicator -->
        <div
          class='mb-8 rounded-lg border border-red-200 bg-red-50 p-4 dark:border-red-800 dark:bg-red-900/20'
        >
          <div class='flex items-center justify-center space-x-2'>
            <svg
              class='h-5 w-5 animate-spin text-red-600 dark:text-red-400'
              fill='none'
              viewBox='0 0 24 24'
            >
              <circle
                class='opacity-25'
                cx='12'
                cy='12'
                r='10'
                stroke='currentColor'
                stroke-width='4'></circle>
              <path
                class='opacity-75'
                fill='currentColor'
                d='M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z'
              ></path>
            </svg>
            <span class='font-medium text-red-600 dark:text-red-400'
              >Internal Server Error</span
            >
          </div>
        </div>

        <!-- Action Buttons -->
        <div class='flex flex-col justify-center gap-4 sm:flex-row'>
          <button
            onclick='location.reload()'
            class='inline-flex transform items-center rounded-lg bg-gradient-to-r from-red-600 to-orange-600 px-6 py-3 text-lg font-semibold text-white shadow-lg transition-all duration-300 hover:scale-105 hover:from-red-700 hover:to-orange-700'
          >
            <svg
              class='mr-2 h-5 w-5'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15'
              ></path>
            </svg>
            Try Again
          </button>

          <a
            href='/'
            class='inline-flex transform items-center rounded-lg border-2 border-gray-300 bg-white px-6 py-3 text-lg font-semibold text-gray-700 shadow-lg transition-all duration-300 hover:scale-105 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700'
          >
            <svg
              class='mr-2 h-5 w-5'
              fill='none'
              stroke='currentColor'
              viewBox='0 0 24 24'
            >
              <path
                stroke-linecap='round'
                stroke-linejoin='round'
                stroke-width='2'
                d='M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
              ></path>
            </svg>
            Go Home
          </a>
        </div>

        <!-- Technical Details (for developers) -->
        <details class='mt-12 text-left'>
          <summary
            class='cursor-pointer text-sm text-gray-600 transition-colors hover:text-gray-800 dark:text-gray-400 dark:hover:text-gray-200'
          >
            Technical Details
          </summary>
          <div
            class='mt-4 rounded-lg bg-gray-100 p-4 font-mono text-sm dark:bg-gray-800'
          >
            <p class='text-gray-700 dark:text-gray-300'>Error Code: 500</p>
            <p class='text-gray-700 dark:text-gray-300'>
              Type: Internal Server Error
            </p>
            <p class='text-gray-700 dark:text-gray-300'>
              Time: <span id='error-time'></span>
            </p>
          </div>
        </details>
      </div>
    </main>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const errorTimeElement = document.getElementById('error-time');
      if (errorTimeElement) {
        errorTimeElement.textContent = new Date().toLocaleString();
      }
    });
  </script>
</Layout>
