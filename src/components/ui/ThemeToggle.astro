---
// Theme toggle component
---

<button
  id='theme-toggle'
  type='button'
  class='rounded-lg bg-gray-100 p-2 transition-colors hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 dark:bg-gray-800 dark:hover:bg-gray-700 dark:focus:ring-offset-gray-900'
  aria-label='Toggle theme'
>
  <!-- Sun icon -->
  <svg
    id='sun-icon'
    class='hidden h-5 w-5 text-gray-700 dark:block dark:text-gray-300'
    fill='none'
    stroke='currentColor'
    viewBox='0 0 24 24'
  >
    <path
      stroke-linecap='round'
      stroke-linejoin='round'
      stroke-width='2'
      d='M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z'
    ></path>
  </svg>

  <!-- Moon icon -->
  <svg
    id='moon-icon'
    class='block h-5 w-5 text-gray-700 dark:hidden dark:text-gray-300'
    fill='none'
    stroke='currentColor'
    viewBox='0 0 24 24'
  >
    <path
      stroke-linecap='round'
      stroke-linejoin='round'
      stroke-width='2'
      d='M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z'
    ></path>
  </svg>
</button>

<script>
  function initThemeToggle() {
    const button = document.getElementById('theme-toggle');
    const html = document.documentElement;

    if (!button) return;

    button.addEventListener('click', () => {
      const isDark = html.classList.contains('dark');
      html.classList.toggle('dark');

      // Save to localStorage
      if (typeof localStorage !== 'undefined') {
        localStorage.setItem('theme', isDark ? 'light' : 'dark');
      }
    });
  }

  // Initialize on page load
  initThemeToggle();

  // Re-initialize after view transitions
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>
