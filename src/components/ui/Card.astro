---
export interface Props {
  variant?: 'default' | 'elevated' | 'outlined' | 'glass' | 'gradient';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  hoverable?: boolean;
  clickable?: boolean;
  href?: string;
  animate?: boolean;
  class?: string;
}

const {
  variant = 'default',
  padding = 'md',
  hoverable = false,
  clickable = false,
  href,
  animate = true,
  class: className = '',
  ...rest
} = Astro.props;

// Define card styles inline
const baseClasses = `
  rounded-lg border transition-all duration-300
  ${animate ? 'transition-all duration-300' : ''}
  ${hoverable ? 'hover:scale-105 hover:shadow-xl cursor-pointer' : ''}
  ${clickable ? 'cursor-pointer' : ''}
`;

const variantClasses = {
  default: 'bg-white border-gray-200 shadow-sm',
  elevated: 'bg-white border-gray-100 shadow-lg hover:shadow-xl',
  outlined: 'bg-white border-gray-300 shadow-none hover:shadow-md',
  glass: 'bg-white/20 backdrop-blur-sm border-white/30 shadow-lg',
  gradient: 'bg-gradient-to-br from-white to-gray-50 border-gray-200 shadow-md'
};

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-12'
};

const cardClasses = `${baseClasses} ${variantClasses[variant]} ${paddingClasses[padding]} ${className}`.trim();

const Element = href ? 'a' : 'div';
const elementProps = href ? { href } : {};
---

<Element 
  class={cardClasses} 
  {...elementProps} 
  {...rest}
  data-animate={animate ? '' : undefined}
>
  <slot />
</Element>

<style>
  /* Gradient card effect */
  .gradient-card {
    background: linear-gradient(135deg, rgba(30, 64, 175, 0.05) 0%, rgba(249, 115, 22, 0.05) 100%);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
</style>
