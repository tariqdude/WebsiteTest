---
import { siteConfig } from '../data/config';
---

<section
  id="home"
  class="relative flex min-h-screen items-center justify-center overflow-hidden"
>
  <!-- Background Elements -->
  <div
    class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent/5"
  >
  </div>
  <div
    class="absolute left-10 top-20 h-72 w-72 animate-float rounded-full bg-primary/10 blur-3xl"
  >
  </div>
  <div
    class="absolute bottom-20 right-10 h-96 w-96 animate-float rounded-full bg-secondary/10 blur-3xl"
    style="animation-delay: -3s;"
  >
  </div>

  <div class="container-custom relative z-10">
    <div class="mx-auto max-w-4xl text-center">
      <!-- Main Heading -->
      <h1 class="mb-6 animate-fade-in text-5xl font-bold md:text-7xl">
        <span class="gradient-text">{siteConfig.hero.title}</span>
        <br />
        <span class="text-foreground">{siteConfig.hero.subtitle}</span>
      </h1>

      <!-- Description -->
      <p
        class="mx-auto mb-8 max-w-2xl animate-fade-in text-xl text-muted-foreground md:text-2xl"
        style="animation-delay: 0.2s;"
      >
        {siteConfig.hero.description}
      </p>

      <!-- CTA Buttons -->
      <div
        class="flex animate-fade-in flex-col justify-center gap-4 sm:flex-row"
        style="animation-delay: 0.4s;"
      >
        <a
          href={siteConfig.hero.primaryCta.href}
          class="btn-primary px-8 py-4 text-lg"
        >
          {siteConfig.hero.primaryCta.text}
          <svg
            class="ml-2 h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href={siteConfig.hero.secondaryCta.href}
          class="btn-outline px-8 py-4 text-lg"
        >
          {siteConfig.hero.secondaryCta.text}
        </a>
      </div>

      <!-- Stats Row -->
      <div
        class="mt-16 grid animate-fade-in grid-cols-2 gap-8 md:grid-cols-4"
        style="animation-delay: 0.6s;"
      >
        {
          [
            { number: '10K+', label: 'Happy Clients' },
            { number: '99.9%', label: 'Uptime' },
            { number: '50K+', label: 'Projects' },
            { number: '24/7', label: 'Support' },
          ].map((stat) => (
            <div class="text-center">
              <div class="gradient-text text-3xl font-bold md:text-4xl">
                {stat.number}
              </div>
              <div class="text-sm text-muted-foreground">{stat.label}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div
    class="absolute bottom-8 left-1/2 -translate-x-1/2 transform animate-bounce"
  >
    <a
      href="#about"
      class="flex flex-col items-center text-muted-foreground transition-colors hover:text-primary"
    >
      <span class="mb-2 text-sm">Scroll to explore</span>
      <svg
        class="h-6 w-6"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </a>
  </div>
</section>
