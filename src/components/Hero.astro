---
import { siteConfig } from '../data/config';
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-secondary/5 to-accent/5"></div>
  <div class="absolute top-20 left-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-float"></div>
  <div class="absolute bottom-20 right-10 w-96 h-96 bg-secondary/10 rounded-full blur-3xl animate-float" style="animation-delay: -3s;"></div>
  
  <div class="container-custom relative z-10">
    <div class="text-center max-w-4xl mx-auto">
      <!-- Main Heading -->
      <h1 class="text-5xl md:text-7xl font-bold mb-6 animate-fade-in">
        <span class="gradient-text">{siteConfig.hero.title}</span>
        <br />
        <span class="text-foreground">{siteConfig.hero.subtitle}</span>
      </h1>
      
      <!-- Description -->
      <p class="text-xl md:text-2xl text-muted-foreground mb-8 animate-fade-in max-w-2xl mx-auto" style="animation-delay: 0.2s;">
        {siteConfig.hero.description}
      </p>
      
      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.4s;">
        <a href={siteConfig.hero.primaryCta.href} class="btn-primary text-lg px-8 py-4">
          {siteConfig.hero.primaryCta.text}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
          </svg>
        </a>
        <a href={siteConfig.hero.secondaryCta.href} class="btn-outline text-lg px-8 py-4">
          {siteConfig.hero.secondaryCta.text}
        </a>
      </div>
      
      <!-- Stats Row -->
      <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-8 animate-fade-in" style="animation-delay: 0.6s;">
        {[
          { number: "10K+", label: "Happy Clients" },
          { number: "99.9%", label: "Uptime" },
          { number: "50K+", label: "Projects" },
          { number: "24/7", label: "Support" }
        ].map((stat) => (
          <div class="text-center">
            <div class="text-3xl md:text-4xl font-bold gradient-text">{stat.number}</div>
            <div class="text-sm text-muted-foreground">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
    <a href="#about" class="flex flex-col items-center text-muted-foreground hover:text-primary transition-colors">
      <span class="text-sm mb-2">Scroll to explore</span>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
      </svg>
    </a>
  </div>
</section>
