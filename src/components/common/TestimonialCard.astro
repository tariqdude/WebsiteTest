---
interface Props {
  quote: string;
  author: string;
  title: string;
}

const { quote, author, title } = Astro.props;
---

<div class="bg-surface p-6 rounded-lg shadow-md flex flex-col items-center text-center">
  <p class="text-text text-lg italic mb-4">"{quote}"</p>
  <p class="font-semibold text-headings">{author}</p>
  <p class="text-sm text-gray-500">{title}</p>
</div>
