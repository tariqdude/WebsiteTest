---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props;
---

<div class="bg-surface p-6 rounded-lg shadow-md text-center">
  {icon && <img src={icon} alt="" class="mx-auto mb-4 w-12 h-12" />}
  <h3 class="text-xl font-semibold text-headings mb-2">{title}</h3>
  <p class="text-text">{description}</p>
</div>
