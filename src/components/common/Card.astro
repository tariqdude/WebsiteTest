---
// src/components/common/Card.astro
const { title, icon } = Astro.props;
---

<div class="bg-surface rounded-lg shadow-lg p-8 text-center transform hover:-translate-y-2 transition-transform duration-300 ease-in-out">
  {icon && (
    <div class="flex items-center justify-center w-16 h-16 mx-auto mb-6 bg-primary rounded-full">
      <!-- In a real project, this would be an <Icon> component -->
      <span class="text-3xl text-white">{icon}</span>
    </div>
  )}
  <h3 class="text-2xl font-bold text-headings mb-4">{title}</h3>
  <div class="text-text">
    <slot />
  </div>
</div>
