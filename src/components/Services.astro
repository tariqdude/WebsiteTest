---
import { services } from '../data/config';
---

<section id="services" class="section-padding bg-muted/30">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
        Our Services
      </h2>
      <p class="text-xl text-muted-foreground">
        Comprehensive solutions tailored to your business needs
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="card p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Header -->
          <div class="mb-6">
            <h3 class="text-2xl font-semibold mb-2">{service.title}</h3>
            <p class="text-muted-foreground mb-4">{service.description}</p>
            <div class="text-2xl font-bold gradient-text">{service.price}</div>
          </div>
          
          <!-- Features -->
          <ul class="space-y-3 mb-8">
            {service.features.map((feature) => (
              <li class="flex items-center">
                <svg class="w-5 h-5 text-primary mr-3" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          
          <!-- CTA -->
          <a href="#contact" class="btn-outline w-full justify-center">
            Get Started
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
