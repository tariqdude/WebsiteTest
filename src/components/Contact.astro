---
import { siteConfig } from '../data/config';
---

<section id="contact" class="section-padding bg-gradient-to-b from-muted/30 to-primary/10">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
        Get In Touch
      </h2>
      <p class="text-xl text-muted-foreground">
        Ready to transform your business? Let's discuss how we can help you achieve your goals.
      </p>
    </div>
    
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- Contact Form -->
      <div class="card p-8">
        <h3 class="text-2xl font-semibold mb-6">Send us a message</h3>
        <form class="space-y-6">
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-sm font-medium mb-2">First Name</label>
              <input 
                type="text" 
                id="firstName" 
                name="firstName" 
                class="w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-background"
                required
              />
            </div>
            <div>
              <label for="lastName" class="block text-sm font-medium mb-2">Last Name</label>
              <input 
                type="text" 
                id="lastName" 
                name="lastName" 
                class="w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-background"
                required
              />
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-sm font-medium mb-2">Email</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              class="w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-background"
              required
            />
          </div>
          
          <div>
            <label for="company" class="block text-sm font-medium mb-2">Company</label>
            <input 
              type="text" 
              id="company" 
              name="company" 
              class="w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-background"
            />
          </div>
          
          <div>
            <label for="message" class="block text-sm font-medium mb-2">Message</label>
            <textarea 
              id="message" 
              name="message" 
              rows="4"
              class="w-full px-4 py-3 border border-input rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent bg-background resize-none"
              required
            ></textarea>
          </div>
          
          <button type="submit" class="btn-primary w-full justify-center">
            Send Message
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
            </svg>
          </button>
        </form>
      </div>
      
      <!-- Contact Info -->
      <div class="space-y-8">
        <div class="card p-8">
          <h3 class="text-2xl font-semibold mb-6">Contact Information</h3>
          <div class="space-y-4">
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span>{siteConfig.email}</span>
            </div>
            
            <div class="flex items-center">
              <svg class="w-6 h-6 text-primary mr-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              <span>{siteConfig.phone}</span>
            </div>
            
            <div class="flex items-start">
              <svg class="w-6 h-6 text-primary mr-4 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
              </svg>
              <span>{siteConfig.address}</span>
            </div>
          </div>
        </div>
        
        <!-- Social Links -->
        <div class="card p-8">
          <h3 class="text-2xl font-semibold mb-6">Follow Us</h3>
          <div class="flex space-x-4">
            {Object.entries(siteConfig.social).map(([platform, url]) => (
              <a 
                href={url}
                class="w-12 h-12 bg-primary/10 hover:bg-primary hover:text-primary-foreground rounded-lg flex items-center justify-center transition-all duration-200 transform hover:-translate-y-1"
                aria-label={`Follow us on ${platform}`}
              >
                <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
