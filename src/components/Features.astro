---

<section id="features" class="section-padding bg-gradient-to-b from-background to-muted/30">
  <div class="container-custom">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-4xl md:text-5xl font-bold mb-6 gradient-text">
        Powerful Features
      </h2>
      <p class="text-xl text-muted-foreground">
        Everything you need to transform and scale your business with cutting-edge technology
      </p>
    </div>
    
    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {features.map((feature, index) => (
        <div class="card p-8 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 animate-fade-in" style={`animation-delay: ${index * 0.1}s`}>
          <!-- Icon -->
          <div class="w-16 h-16 bg-gradient-to-r from-primary to-secondary rounded-lg flex items-center justify-center text-white mb-6">
            <Fragment set:html={iconMap[feature.icon]} />
          </div>
          
          <!-- Content -->
          <h3 class="text-xl font-semibold mb-3">{feature.title}</h3>
          <p class="text-muted-foreground mb-4">{feature.description}</p>
          
          <!-- Benefits -->
          <ul class="space-y-2">
            {feature.benefits.map((benefit) => (
              <li class="flex items-center text-sm text-muted-foreground">
                <svg class="w-4 h-4 text-primary mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                </svg>
                {benefit}
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- CTA Section -->
    <div class="text-center mt-16">
      <a href="#contact" class="btn-primary text-lg px-8 py-4">
        Explore All Features
        <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
        </svg>
      </a>
    </div>
  </div>
</section>
