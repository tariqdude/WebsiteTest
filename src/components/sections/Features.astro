---
import Card from '../common/Card.astro';

const features = [
  {
    title: 'Modular Design',
    description: 'Built with reusable components for easy maintenance and scalability.',
    icon: '/icons/modular.svg',
  },
  {
    title: 'High Performance',
    description: 'Leveraging Astro\'s static site generation for lightning-fast loading.',
    icon: '/icons/performance.svg',
  },
  {
    title: 'Modern Stack',
    description: 'Utilizing Astro, React, and Tailwind CSS for a cutting-edge development experience.',
    icon: '/icons/modern.svg',
  },
];
---

<section class="py-16 bg-background">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold text-headings mb-12">Key Features</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {features.map((feature) => (
        <Card title={feature.title} description={feature.description} icon={feature.icon} />
      ))}
    </div>
  </div>
</section>