---
import Button from '../common/Button.astro';
---

<section class="py-20">
  <div class="container mx-auto">
    <h2 class="text-3xl font-bold text-center text-headings">Contact Us</h2>
    <form class="max-w-lg mx-auto mt-8">
      <div class="mb-4">
        <label for="name" class="block text-text">Name</label>
        <input type="text" id="name" class="w-full px-4 py-2 border rounded-md" />
      </div>
      <div class="mb-4">
        <label for="email" class="block text-text">Email</label>
        <input type="email" id="email" class="w-full px-4 py-2 border rounded-md" />
      </div>
      <div class="mb-4">
        <label for="message" class="block text-text">Message</label>
        <textarea id="message" class="w-full px-4 py-2 border rounded-md"></textarea>
      </div>
      <Button variant="primary" type="submit">Submit</Button>
    </form>
  </div>
</section>
