---
import TestimonialCard from '../common/TestimonialCard.astro';
import { TESTIMONIALS } from '../../config/site';
---

<section class="py-16 bg-background">
  <div class="container mx-auto px-4 text-center">
    <h2 class="text-4xl font-bold text-headings mb-12">What Our Clients Say</h2>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {TESTIMONIALS.map((testimonial) => (
        <TestimonialCard quote={testimonial.quote} author={testimonial.author} title={testimonial.title} />
      ))}
    </div>
  </div>
</section>
