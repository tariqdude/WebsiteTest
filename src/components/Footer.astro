---
import { siteConfig } from '../data/config';
---

<footer class="border-t bg-card">
  <div class="container-custom py-16">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="mb-4 flex items-center space-x-2">
          <div
            class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-r from-primary to-secondary"
          >
            <span class="text-sm font-bold text-white"
              >{siteConfig.name.charAt(0)}</span
            >
          </div>
          <span class="gradient-text text-xl font-bold">{siteConfig.name}</span>
        </div>
        <p class="mb-6 max-w-md text-muted-foreground">
          {siteConfig.description}
        </p>
        <div class="flex space-x-4">
          {
            Object.entries(siteConfig.social).map(([platform, url]) => (
              <a
                href={url}
                class="flex h-10 w-10 items-center justify-center rounded-lg bg-muted transition-all duration-200 hover:bg-primary hover:text-primary-foreground"
                aria-label={`Follow us on ${platform}`}
              >
                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" />
                </svg>
              </a>
            ))
          }
        </div>
      </div>

      <!-- Navigation -->
      <div>
        <h3 class="mb-4 font-semibold">Navigation</h3>
        <ul class="space-y-2">
          {
            siteConfig.navigation.map((item) => (
              <li>
                <a
                  href={item.href}
                  class="text-muted-foreground transition-colors hover:text-primary"
                >
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="mb-4 font-semibold">Contact</h3>
        <ul class="space-y-2 text-muted-foreground">
          <li>{siteConfig.email}</li>
          <li>{siteConfig.phone}</li>
          <li class="text-sm">{siteConfig.address}</li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-12 flex flex-col items-center justify-between border-t border-border pt-8 md:flex-row"
    >
      <p class="text-sm text-muted-foreground">
        Â© 2024 {siteConfig.name}. All rights reserved.
      </p>
      <div class="mt-4 flex space-x-6 md:mt-0">
        <a
          href="#"
          class="text-sm text-muted-foreground transition-colors hover:text-primary"
        >
          Privacy Policy
        </a>
        <a
          href="#"
          class="text-sm text-muted-foreground transition-colors hover:text-primary"
        >
          Terms of Service
        </a>
      </div>
    </div>
  </div>
</footer>
