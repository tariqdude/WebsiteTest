---
import { siteConfig } from '../data/config';
---

<header
  class="glass fixed left-0 right-0 top-0 z-50 border-b border-white/20 backdrop-blur-md"
>
  <nav class="container-custom">
    <div class="flex h-16 items-center justify-between">
      <!-- Logo -->
      <div class="flex items-center space-x-2">
        <div
          class="flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-r from-primary to-secondary"
        >
          <span class="text-sm font-bold text-white"
            >{siteConfig.name.charAt(0)}</span
          >
        </div>
        <span class="gradient-text text-xl font-bold">{siteConfig.name}</span>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden items-center space-x-8 md:flex">
        {
          siteConfig.navigation.map((item) => (
            <a
              href={item.href}
              class="font-medium text-foreground/80 transition-colors duration-200 hover:text-primary"
            >
              {item.name}
            </a>
          ))
        }
      </div>

      <!-- CTA Button -->
      <div class="hidden items-center space-x-4 md:flex">
        <button
          id="theme-toggle"
          class="rounded-lg p-2 transition-colors hover:bg-muted"
        >
          <svg
            class="h-5 w-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
            ></path>
          </svg>
        </button>
        <a href="#contact" class="btn-primary"> Get Started </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-toggle"
        class="rounded-lg p-2 transition-colors hover:bg-muted md:hidden"
      >
        <svg
          class="h-6 w-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div
      id="mobile-menu"
      class="hidden border-t border-white/20 py-4 md:hidden"
    >
      <div class="flex flex-col space-y-4">
        {
          siteConfig.navigation.map((item) => (
            <a
              href={item.href}
              class="px-4 py-2 font-medium text-foreground/80 transition-colors duration-200 hover:text-primary"
            >
              {item.name}
            </a>
          ))
        }
        <div class="border-t border-white/20 px-4 pt-4">
          <a href="#contact" class="btn-primary w-full justify-center">
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const mobileMenuToggle = document.getElementById('mobile-menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuToggle?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Theme toggle
  const themeToggle = document.getElementById('theme-toggle');

  themeToggle?.addEventListener('click', () => {
    const isDark = document.documentElement.classList.contains('dark');
    document.documentElement.classList.toggle('dark', !isDark);
    localStorage.setItem('theme', !isDark ? 'dark' : 'light');
  });

  // Close mobile menu when clicking on links
  const mobileLinks = mobileMenu?.querySelectorAll('a');
  mobileLinks?.forEach((link) => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
