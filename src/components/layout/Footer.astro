---
import { SITE, SOCIAL_LINKS } from '../../config/site';
---

<footer class="bg-headings text-white py-8 mt-12">
  <div class="container mx-auto text-center px-4">
    <p>&copy; {new Date().getFullYear()} {SITE.title}. All rights reserved.</p>
    <div class="mt-2">
      <a href="/privacy" class="text-white hover:text-primary underline text-sm mx-2">Privacy Policy</a>
      <span class="text-white">|</span>
      <a href="/terms" class="text-white hover:text-primary underline text-sm mx-2">Terms of Service</a>
    </div>
    <div class="flex justify-center space-x-4 mt-4">
      {SOCIAL_LINKS.map((link) => (
        <a href={link.href} target="_blank" rel="noopener noreferrer" class="text-white hover:text-primary">
          {link.name}
        </a>
      ))}
    </div>
  </div>
</footer>
