---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Dyno Race Car Testing and Performance" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Precision Dyno</title>
		<ViewTransitions />
	</head>
	<body class="min-h-screen flex flex-col bg-primary text-secondary font-body">
		<header class="bg-primary text-secondary p-4 shadow-lg">
			<nav class="container mx-auto flex justify-between items-center">
				<a href="/WebsiteTest/" class="text-2xl font-heading text-accent">Precision Dyno</a>
				<ul class="flex space-x-6">
					<li><a href="/WebsiteTest/" class="hover:text-accent transition-colors duration-300">Home</a></li>
					<li><a href="/WebsiteTest/about" class="hover:text-accent transition-colors duration-300">About</a></li>
					<li><a href="/WebsiteTest/services" class="hover:text-accent transition-colors duration-300">Services</a></li>
					<li><a href="/WebsiteTest/contact" class="hover:text-accent transition-colors duration-300">Contact</a></li>
				</ul>
			</nav>
		</header>
		<main class="flex-grow container mx-auto p-4">
			<slot />
		</main>
		<footer class="bg-primary text-secondary p-4 text-center border-t border-gray-700">
			<p>&copy; 2025 Precision Dyno. All rights reserved.</p>
		</footer>
	</body>
</html>