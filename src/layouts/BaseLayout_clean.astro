---
import SEO from '../components/SEO.astro';
import type { SEOProps } from '../types/index.js';

interface Props extends SEOProps {}

const props = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/WebsiteTest/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO Component -->
    <SEO {...props} />
    
    <!-- Favicon and App Icons -->
    <link rel="apple-touch-icon" sizes="180x180" href="/WebsiteTest/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/WebsiteTest/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/WebsiteTest/favicon-16x16.png">
    <link rel="manifest" href="/WebsiteTest/site.webmanifest">
    <meta name="theme-color" content="#3b82f6">
    
    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="preconnect" href="https://www.google-analytics.com">
    
    <!-- Font Loading -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    
    <!-- Performance hints -->
    <link rel="dns-prefetch" href="//www.googletagmanager.com">
    <link rel="dns-prefetch" href="//clarity.microsoft.com">
</head>
<body class="font-sans antialiased bg-white text-gray-900 leading-relaxed">
    <div id="app" class="min-h-screen flex flex-col">
        <slot />
    </div>
    
    <!-- Global Scripts -->
    <script is:inline>
        // Initialize analytics consent
        if (typeof window !== 'undefined') {
            const hasConsent = localStorage.getItem('mw_hvac_analytics_consent');
            if (hasConsent === 'true') {
                // Initialize analytics if consent given
                if (typeof gtag !== 'undefined') {
                    gtag('consent', 'update', {
                        analytics_storage: 'granted'
                    });
                }
            }
        }
        
        // Performance mark for page load
        if (typeof performance !== 'undefined') {
            performance.mark('page-start');
        }
        
        // Service worker registration
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/WebsiteTest/sw.js')
                    .then(registration => {
                        console.log('SW registered: ', registration);
                    })
                    .catch(registrationError => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }
    </script>
</body>
</html>
